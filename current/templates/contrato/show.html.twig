                                {% if app.session.get('privilegiosRol').deleteContratoSn %}
                                    var url = '{{ path("contrato_delete", {'id': 'id'}) }}';
                                    url = url.replace("id", id);
                                    actions += '<a href="'+id+'" class="list-icons-item" data-popup="tooltip" title="Eliminar" data-container="body" onclick="return confirm(\'{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}\');"><i class="icon-trash"></i></a>';
                                {% endif %}
                            {% endif %}

                            actions += '</div>';

                            var renovado;
                            if(item['renovado'] == true){
                                renovado = '<span class="badge badge-flat border-success text-success-600"><i class="icon-checkmark2"></i></span>';
                            }else{
                                renovado = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                            }

                            var tipo = '';
                            if(item['tipoid'] != ""){
                                if(item['tipoid'] == '1'){
                                    tipo = '<span class="badge badge-success">'+item['tipo']+'</span>';
                                }else if(item['tipoid'] == '2'){
                                    tipo = '<span class="badge badge-primary">'+item['tipo']+'</span>';
