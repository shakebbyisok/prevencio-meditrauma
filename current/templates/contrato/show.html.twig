                                        {% if app.session.get('privilegiosRol').deleteGdocFileSn is defined and app.session.get('privilegiosRol').deleteGdocFileSn is not null %}
                                            {% if app.session.get('privilegiosRol').deleteGdocFileSn %}
                                                actions += '<a href="#" data-id="'+item['fichero_id']+'" class="list-icons-item eliminarFichero" data-popup="tooltip" title="Eliminar fichero" data-container="body"><i class="icon-file-minus"></i></a>';
                                            {% endif %}
                                        {% endif %}
                                    }else{
                                        actions += '<a href="#" data-id="'+id+'" class="list-icons-item selectContrato" data-popup="tooltip" title="Generar fichero" data-container="body" data-toggle="modal" data-target="#modal_generate_contrato"><i class="icon-file-plus"></i></a>';
                                    }
                                {% endif %}
                            {% endif %}

