                                activa = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                            }

                            var facturadoContrato;
                            if(item['facturado'] == true){
                                facturadoContrato = '<span class="badge badge-flat border-success text-success-600"><i class="icon-checkmark2"></i></span>';
                            }else{
                                facturadoContrato = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                            }

                            var input = '<div class="uniform-checker" id="uniform-'+item['id']+'"><span><input type="checkbox" name="contrato" id="'+item['id']+'" class="form-check-input-styled form-check-input" value="1" /></span></div>';

                            array.push(input, actions, ''+item['contrato']+'', facturadoContrato, activa, ''+item['empresa']+'', ''+item['cnae']+'', tipo, ''+item['fechainicio']+'', ''+item['fechavencimiento']+'', ''+item["importe"]+'', ''+item['tecnico']+'', ''+item['colaborador']+'', ''+item['agente']+'', ''+item['localidad_postal']+'', ''+item['provincia_postal']+'', ''+item['trabajadores']+'', ''+item['vigilante_salud']+'', ''+item['fecha_alta']+'', ''+item['nombre_representante']+'', ''+item['ccc']+'', ''+item['codigo_empresa']+'', ''+item['fecha_vencimiento_contrato']+'', ''+item['cif']+'', ''+item['codigo_postal']+'', ''+item['correo']+'', ''+item['gestor']+'', ''+item['domicilio_fiscal']+'', ''+item['municipio_serpa']+'', ''+item['localidad_fiscal']+'');

                            arrayNewData.push(array);
