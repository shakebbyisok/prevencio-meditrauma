{#                                actions += '<a href="{{ path('renovacion_renovar', { 'id': contrato.renovacionid }) }}" class="list-icons-item" data-popup="tooltip" title="Renovar" data-container="body"><i class="icon-copy4"></i></a>';#}
{#                            {% endif %}#}
{#                        {% endif %}#}
{#                    {% endif %}#}
{#                {% endif %}#}

                {% if app.session.get('privilegiosRol').printContratoSn is defined and app.session.get('privilegiosRol').printContratoSn is not null %}
                    {% if app.session.get('privilegiosRol').printContratoSn %}
                        {% if contrato.fichero_id is not null %}
                            actions += '<a href="{{ path('gdoc_open_file', { "fileId": contrato.fichero_id, "tipo": "1" }) }}" class="list-icons-item" target="_blank" data-popup="tooltip" title="Imprimir" data-container="body"><i class="icon-printer2"></i></a>';
                            {% if app.session.get('privilegiosRol').deleteGdocFileSn is defined and app.session.get('privilegiosRol').deleteGdocFileSn is not null %}
                                {% if app.session.get('privilegiosRol').deleteGdocFileSn %}
                                    actions += '<a href="#" data-id="{{ contrato.fichero_id }}" class="list-icons-item eliminarFichero" data-popup="tooltip" title="Eliminar fichero" data-container="body"><i class="icon-file-minus"></i></a>';
                                {% endif %}
                            {% endif %}
                        {% else %}
                            actions += '<a href="#" data-id="{{ contrato.id }}" class="list-icons-item selectContrato" data-popup="tooltip" title="Generar fichero" data-container="body" data-toggle="modal" data-target="#modal_generate_contrato"><i class="icon-file-plus"></i></a>';
                        {% endif %}
                    {% endif %}
                {% endif %}

                {% if app.session.get('privilegiosRol').deleteContratoSn is defined and app.session.get('privilegiosRol').deleteContratoSn is not null %}
                    {% if app.session.get('privilegiosRol').deleteContratoSn %}
                        actions += '<a href="{{ path('contrato_delete', { "id": contrato.id }) }}" class="list-icons-item" data-popup="tooltip" title="Eliminar" data-container="body" onclick="return confirm(\'{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}\');"><i class="icon-trash"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                var renovado;
                {% if contrato.renovado == true %}
                    renovado = '<span class="badge badge-flat border-success text-success-600"><i class="icon-checkmark2"></i></span>';
                {% else %}
                    renovado = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                {% endif %}

                var tipo = '';
                {% if contrato.tipo is not empty %}
                    {% if contrato.tipoid == 1 %}
                        tipo = '<span class="badge badge-success">{{ contrato.tipo }}</span>';
                    {% elseif contrato.tipoid == 2 %}
                        tipo = '<span class="badge badge-primary">{{ contrato.tipo }}</span>';
                    {% elseif contrato.tipoid == 3 %}
                        tipo = '<span class="badge badge-danger">{{ contrato.tipo }}</span>';
                    {% else %}
                        tipo = '<span class="badge badge-info">{{ contrato.tipo }}</span>';
                    {% endif %}
                {% endif %}

                var activa = '<span class="badge badge-flat border-success text-success-600"><i class="icon-checkmark2"></i></span>';
                {% if contrato.anulado == true %}
                    activa = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                {% endif %}

                var facturado = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                {% if contrato.facturado == true %}
                    facturado = '<span class="badge badge-flat border-success text-success-600"><i class="icon-checkmark2"></i></span>';
                {% endif %}

                var input = '<div class="uniform-checker" id="uniform-{{ contrato.id }}"><span><input type="checkbox" name="contrato" id="{{ contrato.id }}" class="form-check-input-styled form-check-input" value="1" /></span></div>';

                array.push(input, actions, '{{ contrato.contrato }}', facturado, activa, '{{ contrato.empresa }}', '{{ contrato.cnae }}', tipo, '{{ contrato.fechainicio }}', '{{ contrato.fechavencimiento }}', '{{ contrato.importe }}', '{{ contrato.tecnico }}', '{{ contrato.colaborador }}', '{{ contrato.agente }}', '{{ contrato.localidad_postal }}', '{{ contrato.provincia_postal }}', '{{ contrato.trabajadores }}','{{ contrato.vigilante_salud }}','{{ contrato.fecha_alta }}','{{ contrato.nombre_representante }}','{{ contrato.ccc }}','{{ contrato.codigo_empresa }}','{{ contrato.fecha_vencimiento_contrato }}','{{ contrato.cif }}','{{ contrato.codigo_postal }}','{{ contrato.correo }}','{{ contrato.gestor }}','{{ contrato.domicilio_fiscal }}','{{ contrato.municipio_serpa }}','{{ contrato.localidad_fiscal }}');

                arrayData.push(array);

            {% endfor %}

            $.extend( $.fn.dataTable.defaults, {
                // autoWidth: true,
                // columnDefs: [{
                //     width: 100,
                // }],
                // ordering: true,
                deferRender: true,
                dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
