{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'contratos' %}

{% block title %} {% trans %}TRANS_CONTRATOS_RENOVADOS{% endtrans %} {% endblock %}
{% block subtitle %} {% trans %}TRANS_LISTADO{% endtrans %} {% endblock %}

{% block actions %}
    {% if app.session.get('privilegiosRol').facturarContratoMultipleSn is defined and app.session.get('privilegiosRol').facturarContratoMultipleSn is not null %}
        {% if app.session.get('privilegiosRol').facturarContratoMultipleSn %}
            <a href="#" class="btn btn-labeled btn-labeled-left bg-slate" data-toggle="modal" data-target="#modal_facturar_contrato_multiple">{% trans %}TRANS_FACTURAR_MULTIPLE{% endtrans %}<b><i class="icon-copy4"></i></b></a>
        {% endif %}
    {% endif %}
{% endblock %}


{% block card %}

    <script type="text/javascript">

        $(document).ready(function(){

            var arrayData = [];

            {% for contrato in contratos %}
                var array = [];

                var tipo = '';
                {% if contrato.tipo is not empty %}
                    tipo = '<span class="badge badge-info">{{ contrato.tipo }}</span>';
                {% endif %}

                var tipo = '';
                {% if contrato.tipo is not empty %}
                    {% if contrato.tipoid == 1 %}
                        tipo = '<span class="badge badge-success">{{ contrato.tipo }}</span>';
                    {% elseif contrato.tipoid == 2 %}
                        tipo = '<span class="badge badge-primary">{{ contrato.tipo }}</span>';
                    {% elseif contrato.tipoid == 3 %}
                        tipo = '<span class="badge badge-danger">{{ contrato.tipo }}</span>';
                    {% else %}
                        tipo = '<span class="badge badge-info">{{ contrato.tipo }}</span>';
                    {% endif %}
                {% endif %}

                var input = '<div class="uniform-checker" id="uniform-{{ contrato.id }}"><span><input type="checkbox" name="contrato" id="{{ contrato.id }}" class="form-check-input-styled form-check-input" value="1" /></span></div>';

                array.push(input, '{{ contrato.contrato }}', '{{ contrato.empresa }}', tipo, '<span style="display:none;">{{ contrato.fechainiciotimestamp }}</span>{{ contrato.fechainicio }}', '<span style="display:none;">{{ contrato.fechavencimientotimestamp }}</span>{{ contrato.fechavencimiento }}');
                arrayData.push(array);
            {% endfor %}

            $.extend( $.fn.dataTable.defaults, {
                // autoWidth: true,
                // columnDefs: [{
                //     width: 100,
                // }],
                // ordering: true,
                deferRender: true,
                dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                lengthMenu: [[10, 25, 50, 100, 500, 2000, 5000], [10, 25, 50, 100, 500, 2000, 5000]],
                language: {
                    search: '<span>Filtrar:</span> _INPUT_',
                    searchPlaceholder: 'Escriba para filtrar...',
                    lengthMenu: '<span>Mostrar:</span> _MENU_',
                    paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                },
                data: arrayData
            });

            $('.datatable-export-excel').DataTable({
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportContratoSn is defined and app.session.get('privilegiosRol').exportContratoSn is not null %}
                {% if app.session.get('privilegiosRol').exportContratoSn != true %}
                    $('.dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            //Boton que envia los contratos a facturas
            $('#btnFacturarMultiple').click(function () {
                if(arrayContratos.length == 0){
                    new PNotify({
                        title: '{% trans from 'messages' %}TRANS_ATENCION{% endtrans %}',
                        text: '{% trans %}TRANS_ERROR_CONTRATOS_FACTURAR_MULTIPLE{% endtrans %}',
                        icon: 'icon-warning22',
                        type: 'warning'
                    });
                    return false;
                }

                location.href = '{{ path('factura_contrato_multiple') }}?contratos='+arrayContratos;
            });
        });

        //Boton que añade el id del contrato para su generacion
        $(document).on('click', 'a.selectContrato', function(){
            var contratoId = $(this).data('id');
            $('#contratoId').val(contratoId);
        });

        var arrayContratos = [];
        //Boton que añade el contrato a la lista de contratos seleccionadas
        $(document).on('click', 'input[name=\'contrato\']', function(){
            var contratoId = $(this).attr('id');
            if ($(this).prop('checked')) {
                $('#uniform-'+contratoId+' span').addClass('checked');
                arrayContratos.push(contratoId);
            }else{
                $('#uniform-'+contratoId+' span').removeClass('checked');
                arrayContratos.splice($.inArray(contratoId, arrayContratos),1);
            }
        });

        //Boton que añade todas los contratos a la lista de contratos seleccionadas
        $(document).on('click', 'input[name=\'contratosAll\']', function(){
            var table = $('.datatable-export-excel').DataTable();
            var rowsCount = table.rows().count();
            var rows = table.rows({ search: 'applied' }).data();

            if($(this).prop('checked')){
                for(var i=0 ; rowsCount>i;i++){
                    var dataCheckbox = rows[i][0];
                    var check = $(dataCheckbox).find("input[name=\'contrato\']");

                    var contratoId = $(check).attr('id');
                    $('#uniform-'+contratoId+' span').addClass('checked');
                    arrayContratos.push(contratoId);
                }
            }else{
                for(var i=0 ; rowsCount>i;i++){
                    var dataCheckbox = rows[i][0];
                    var check = $(dataCheckbox).find("input[name=\'contrato\']");

                    var contratoId = $(check).attr('id');
                    $('#uniform-'+contratoId+' span').removeClass('checked');
                }
                arrayContratos.splice(0, arrayContratos.length);
            }
        });

    </script>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
            <div class="datatable-scroll">
                <table class="table datatable-export-excel dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                    <thead>
                    <tr role="row">
                        <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-label="Select" width="25px">
                            <input type="checkbox" name="contratosAll" id="selectContratosAll"  class="form-check-input-styled form-check-input" value="1" /> {% trans from 'messages' %}TRANS_SELECT_ALL{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Contrato" aria-sort="ascending">{% trans %}TRANS_CONTRATO{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Empresa">{% trans %}TRANS_EMPRESA{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="TipoEmpresa">{% trans from 'empresas' %}TRANS_TIPO{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Fecha">{% trans %}TRANS_FECHA{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Vencimiento">{% trans %}TRANS_VENCIMIENTO{% endtrans %}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal facturar contrato multiple -->
    <div id="modal_facturar_contrato_multiple" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans %}TRANS_FACTURAR_MULTIPLE{% endtrans %}</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <div class="alert alert-info bg-white alert-styled-left alert-arrow-left alert-dismissible">
                        {% trans %}TRANS_AVISO_FACTURAS_A_FACTURAR{% endtrans %}
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn bg-primary" id="btnFacturarMultiple">{% trans %}TRANS_FACTURAR{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal generacion contrato -->
{% endblock %}