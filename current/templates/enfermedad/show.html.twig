{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'enfermedad' %}

{% block title %} {% trans %}TRANS_ENFERMEDADES{% endtrans %} {% endblock %}
{% block subtitle %} {% trans %}TRANS_LISTADO{% endtrans %} {% endblock %}

{% block actions %}
    {% if app.session.get('privilegiosRol').addEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').addEnfermedadProfesionalSn is not null %}
        {% if app.session.get('privilegiosRol').addEnfermedadProfesionalSn %}
            <a href="{{ path('medico_enfermedad_add') }}" class="btn btn-labeled btn-labeled-left bg-primary">{% trans %}TRANS_NUEVA_ENFERMEDAD{% endtrans %}<b><i class="icon-plus3"></i></b></a>
        {% endif %}
    {% endif %}
{% endblock %}


{% block card %}

    <script type="text/javascript">

        $(document).ready(function(){

            var arrayData = [];

            {% for e in enfermedades %}
                var array = [];

                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').editEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').editEnfermedadProfesionalSn is not null %}
                    {% if app.session.get('privilegiosRol').editEnfermedadProfesionalSn %}
                        actions += '<a href="{{ path('medico_enfermedad_update', { "id": e.id }) }}" class="list-icons-item" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>';
                    {% endif %}
                {% endif %}

                {% if app.session.get('privilegiosRol').deleteEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').deleteEnfermedadProfesionalSn is not null %}
                    {% if app.session.get('privilegiosRol').deleteEnfermedadProfesionalSn %}
                        actions += '<a href="#" class="list-icons-item eliminarEnfermedad"><i class="icon-trash"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                array.push(actions, '{{ e.descripcion }}');
                arrayData.push(array);
            {% endfor %}

            $.extend( $.fn.dataTable.defaults, {
                autoWidth: true,
                columnDefs: [{
                    width: 100,
                }],
                ordering: true,
                deferRender: true,
                dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                language: {
                    search: '<span>Filtrar:</span> _INPUT_',
                    searchPlaceholder: 'Escriba para filtrar...',
                    lengthMenu: '<span>Mostrar:</span> _MENU_',
                    paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                },
                data: arrayData
            });

            $('.datatable-export-excel').DataTable({
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').exportEnfermedadProfesionalSn is not null %}
                {% if app.session.get('privilegiosRol').exportEnfermedadProfesionalSn != true %}
                    $('.dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}
        });

        //Boton que elimina la enfermedad seleccionada
        $(document).on('click', 'a.eliminarEnfermedad', function(){
            var id = $(this).data('id');
            bootbox.confirm({
                title: '{% trans from 'messages' %}TRANS_ELIMINAR_ENFERMEDAD{% endtrans %}',
                message: '{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}',
                buttons: {
                    confirm: {
                        label: 'Si',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-link'
                    }
                },
                callback: function (result) {
                    if(result == true){
                        var url = '{{ path('medico_enfermedad_delete', { "id": "enfermedadId" }) }}';
                        url = url.replace("enfermedadId", id);
                        window.location.href = url;
                    }
                }
            });
        });
    </script>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
            <div class="datatable-scroll">
                <table class="table datatable-export-excel dataTable no-footer" id="DataTables_Table_0" role="grid"
                       aria-describedby="DataTables_Table_0_info">
                    <thead>
                    <tr role="row">
                        <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-label="Actions"
                            style="width: 100px;">{% trans from 'messages' %}TRANS_ACCIONES{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Enfermedad">{% trans %}TRANS_ENFERMEDAD{% endtrans %}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}