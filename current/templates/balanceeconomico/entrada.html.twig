{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'balanceeconomico' %}

{% block arrow %}<a href="{{ path('empresa_update', { "id": app.session.get('empresa').id }) }}" style="color: black;" onclick="return confirm('{% trans from 'messages' %}TRANS_CONFIRM_RETURN{% endtrans %}')"><i class="icon-arrow-left52 mr-2"></i></a>{% endblock %}
{% block title %} {% trans %}TRANS_BALANCE_ECONOMICO{% endtrans %} {% endblock %}
{% block subtitle %}
    {% if (app.request.get('id') is defined and app.request.get('id') is not empty ) %}
        {{ form.vars.value.concepto }}
    {% else %}
        {% trans %}TRANS_NUEVA_ENTRADA_BALANCE{% endtrans %}
    {% endif %}
{% endblock %}

{% block card %}

    <script type="text/javascript">
        $(document).ready(function(){

        });
    </script>

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}

            <div class="row">
                <div class="col-lg-2">
                    {{ form_row(form.facturacion) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-2">
                    {{ form_row(form.fecha) }}
                </div>
                <div class="col-lg-2">
                    {{ form_row(form.importe, {'attr': {'class': 'type_text_to_number'}}) }}
                </div>
                <div class="col-lg-2">
                    {{ form_row(form.tipo) }}
                </div>
                <div class="col-lg-2">
                    {{ form_row(form.formaPago) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.concepto) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.pagoConfirmado) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.observaciones) }}
                </div>
            </div>

        </div>

        <div class="card-footer d-flex justify-content-between align-items-center border-top-0">
            {% if app.session.get('privilegiosRol').editEntradaBalanceEconomicoSn is defined and app.session.get('privilegiosRol').editEntradaBalanceEconomicoSn is not null %}
                {% if app.session.get('privilegiosRol').editEntradaBalanceEconomicoSn %}
                    {{ form_row(form.guardar) }}
                {% else %}
                    {{ form_row(form.guardar, {'attr': {'style': 'display: none;'}}) }}
                {% endif %}
            {% else %}
                {{ form_row(form.guardar, {'attr': {'style': 'display: none;'}}) }}
            {% endif %}
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}



