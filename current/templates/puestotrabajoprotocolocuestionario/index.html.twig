                                        <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 100px;">{% trans from 'messages' %}TRANS_ACCIONES{% endtrans %}</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="ProtocoloEs" aria-sort="ascending">{% trans %}TRANS_PROTOCOLO_ES{% endtrans %}</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="ProtocoloCa" aria-sort="ascending">{% trans %}TRANS_PROTOCOLO_CA{% endtrans %}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h3 style="text-align: center; font-weight: bolder;">{% trans %}TRANS_PUESTO_TRABAJO_PROTOCOLO{% endtrans %}</h3>
