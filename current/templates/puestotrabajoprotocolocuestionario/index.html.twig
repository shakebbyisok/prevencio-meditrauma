                </div>
                <div class="card-body">
                    <div id="datatable" class="dataTables_wrapper no-footer">
                        <div class="datatable-scroll">
                            <table class="table datatable-export-excel-puestoTrabajoProtocolo dataTable no-footer" id="puestoTrabajoProtocolo" role="grid" aria-describedby="DataTables_Table_0_info" style="width: 100% !important;">
                                <thead>
                                <tr class="bg-grey-300" role="row">
                                    <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 100px;">{% trans from 'messages' %}TRANS_ACCIONES{% endtrans %}</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Empresa">{% trans %}TRANS_EMPRESA{% endtrans %}</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="PuestoTrabajo" aria-sort="ascending">{% trans %}TRANS_PUESTO_TRABAJO{% endtrans %}</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Actualizado">{% trans %}TRANS_ACTUALIZADO{% endtrans %}</th>
                                </tr>
