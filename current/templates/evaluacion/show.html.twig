        //Boton que busca la id de la plantilla a través de la id de la evaluacion
        $(document).on('click', 'a.selectEvaluacion', function(){
            var evaluacionId = $(this).data('id');

            $('#btnObtenerSeleccion').val(evaluacionId);
            $('#modal_view_puestosTrab').modal('show');

            var url = '{{ path('ruta_del_controlador_que_devuelve_centros') }}';

            xhr = $.ajax({
                type: 'POST',
                url: url,
                data: {
                    'plantillaId': evaluacionId
                },
                dataType: 'json',
                success: function (response) {
                    // Obtén los centros de la respuesta AJAX
                    var centros = response;
                    var selectFichero = $('#selectFichero');

                    // Vacía todas las opciones existentes
                    selectFichero.empty();

                    // Agrega la opción "Todos los centros" al Select2
                    selectFichero.append($('<option>', {
                        value: '0', // Puedes asignar otro valor si lo prefieres
                        text: 'Todos los puestos'
                    }));
                    // Inicializa el Select2 con los centros
                    $('#selectFichero').select2({
                        data: centros.map(function (centro) {
                            return { id: centro.id, text: centro.descripcion };
                        })
                    });
                    $('#selectFichero').show();
                }
            });
        });

        function imprimeEvaluacion(evaluacionId, plantillaId, tipo, seleccion){
            $.ajax({
                type: "POST",
                url: "{{ path('gdoc_generar_file') }}",
                data: {
                    'plantillaId': plantillaId,
                    'id': evaluacionId,
                    'tipo': tipo,
                    'select2': seleccion
                },
                dataType: "JSON",
                success: function (data) {
                    if(data != ""){
                        var w = window.open();
                        w.location = data.url;
                        location.reload();
                    }
                },
                error: function(){
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

        function deleteFichero(id, tipo) {
            $.ajax({
                type: "POST",
                url: "{{ path('gdoc_delete_file') }}",
                data: {
                    'id': id,
                    'tipo': tipo
