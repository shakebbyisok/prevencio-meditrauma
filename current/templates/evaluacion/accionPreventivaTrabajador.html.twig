    <!-- Modal añadir epi -->
    <div id="modal_añadir_epi" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %} EPI</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <label>EPI</label>
                    <select id="listEpi" class="form-control select-search">
                        <option value=""></option>
                        {% if listEpi is defined and listEpi is not empty %}
                            {% for le in listEpi %}
                                <option value="{{ le.id }}">{{ le.descripcion }}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn bg-primary" id="btnAddEpi">{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
