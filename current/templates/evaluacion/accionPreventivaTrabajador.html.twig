            <div class="col-lg-12">
                <a href="{{ path('tecnico_evaluaciones_evaluacion_create_accion_preventiva_trabajador') }}" class="btn btn-labeled btn-labeled-left bg-primary">{% trans %}TRANS_AÑADIR_OTRA_ACCION_PREVENTIVA{% endtrans %}<b><i class="icon-plus3"></i></b></a>
            </div>
        </div>
        <br/>
    {% endif %}

