{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'empresas' %}

{% block title %} {% trans from 'messages' %}TRANS_ENVIAR_CORREO_MASIVO{% endtrans %} {% endblock %}
{% block subtitle %} {% trans %}TRANS_LISTADO{% endtrans %} {% endblock %}

{% block actions %}
    {% if app.session.get('privilegiosRol').enviarCorreoMasivoSn is defined and app.session.get('privilegiosRol').enviarCorreoMasivoSn is not null %}
        {% if app.session.get('privilegiosRol').enviarCorreoMasivoSn %}
            <a href="#" id="btnEnvioCorreoMasivo" class="btn btn-labeled btn-labeled-left bg-slate">{% trans from 'messages' %}TRANS_ENVIAR_CORREO_MASIVO{% endtrans %}<b><i class="icon-copy4"></i></b></a>
        {% endif %}
    {% endif %}
{% endblock %}


{% block card %}

    <script type="text/javascript">

        $(document).ready(function(){

            var arrayData = [];

            {% for empresa in empresas %}
                var array = [];

                var tipo = '';
                {% if empresa.tipo is not empty %}
                    {% if empresa.tipoid == 1 %}
                        tipo = '<span class="badge badge-info">{{ empresa.tipo }}</span>';
                    {% elseif empresa.tipoid == 2 %}
                        tipo = '<span class="badge badge-danger">{{ empresa.tipo }}</span>';
                    {% elseif empresa.tipoid == 3 %}
                        tipo = '<span class="badge badge-warning">{{ empresa.tipo }}</span>';
                    {% else %}
                        tipo = '<span class="badge badge-primary">{{ empresa.tipo }}</span>';
                    {% endif %}
                {% endif %}

                var estado = '';
                {% if empresa.estado is not empty %}
                    {% if empresa.estadoid != 4 %}
                        estado = '<span class="badge badge-danger">{{ empresa.estado }}</span>';
                    {% else %}
                        estado = '<span class="badge badge-success">{{ empresa.estado }}</span>';
                    {% endif %}
                {% else %}
                    estado = '<span class="badge badge-success"><br/></span>';
                {% endif %}

                var input = '<div class="uniform-checker" id="uniform-{{ empresa.id }}"><span><input type="checkbox" name="empresa" id="{{ empresa.id }}" class="form-check-input-styled form-check-input" value="1" /></span></div>';

                array.push(input, estado, tipo, '{{ empresa.empresa }}', '{{ empresa.codigo }}', '{{ empresa.cif }}', '{{ empresa.telefono1 }}', '{{ empresa.telefono2 }}', '{{ empresa.email }}', '{{ empresa.colaborador }}', '{{ empresa.tecnico }}', '{{ empresa.agente }}', '{{ empresa.medico }}', '{{ empresa.responsableadministrativo }}', '{{ empresa.domicilio_postal }}', '{{ empresa.localidad_postal }}', '{{ empresa.codigo_postal_postal }}', '{{ empresa.trabajadores }}');
                arrayData.push(array);
            {% endfor %}

            $.extend( $.fn.dataTable.defaults, {
                // autoWidth: true,
                // columnDefs: [{
                //     width: 100,
                // }],
                // ordering: true,
                deferRender: true,
                dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                lengthMenu: [[10, 25, 50, 100, 500, 2000, 5000], [10, 25, 50, 100, 500, 2000, 5000]],
                language: {
                    search: '<span>Filtrar:</span> _INPUT_',
                    searchPlaceholder: 'Escriba para filtrar...',
                    lengthMenu: '<span>Mostrar:</span> _MENU_',
                    paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                },
                data: arrayData
            });

            $('.datatable-export-excel').DataTable({
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            $('.dt-buttons').css('display', 'none');

            //Boton que filtra las facturas
            $('#btnFiltra').click(function(){
                var tipo = $('#tipo').val();
                if(tipo != ""){
                    filtrar(1, tipo);
                }
            });

            //Boton que hace un reset de los filtros
            $('#btnReset').click(function(){
                $('#tipo').select2().val(null).trigger("change");
                filtrar(2, null);
            });

            //Boton que envia los contratos a renovar
            $('#btnEnvioCorreoMasivo').click(function () {
                if(arrayEmpresas.length == 0){
                    new PNotify({
                        title: '{% trans from 'messages' %}TRANS_ATENCION{% endtrans %}',
                        text: '{% trans from 'messages' %}TRANS_ERROR_EMPRESAS_CORREO_MASIVO{% endtrans %}',
                        icon: 'icon-warning22',
                        type: 'warning'
                    });
                    return false;
                }else{
                    $.ajax({
                        type: "POST",
                        url: '{{ path('envio_masivo_pre_correo_enviar') }}',
                        dataType: 'JSON',
                        data: {
                            empresas: arrayEmpresas
                        },
                        success: function (data) {
                            if(data == 'OK'){
                                var url = '{{ path('envio_masivo_correo_enviar') }}';
                                location.href = url;
                            }
                        },
                        error: function(){
                            new PNotify({
                                title: 'Ops!',
                                text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                                icon: 'icon-blocked',
                                type: 'error'
                            });
                        }
                    });
                }
            });
        });

        function daysInMonth (month, year) {
            return new Date(year, month, 0).getDate();
        }

        function filtrar(op, tipo){

            if(op == 1){
                $('#btnFiltra').prop("disabled", true);
                $('#btnFiltra').html("<i class='icon-spinner2 spinner mr-2'></i>Filtrar");
            }else{
                $('#btnReset').prop("disabled", true);
                $('#btnReset').html("<i class='icon-spinner2 spinner mr-2'></i>Reset");
            }

            $.ajax({
                type: "POST",
                url: '{{ path('envio_masivo_correo_filtra_empresas') }}',
                dataType: 'JSON',
                data: {
                    'tipo': tipo
                },
                success: function (data) {

                    //Limpiamos la tabla
                    var table = $('.datatable-export-excel').DataTable();
                    table.clear().destroy();

                    if(JSON.parse(data) != ""){

                        var arrayNewData = [];

                        $.each(JSON.parse(data), function (key, item) {
                            var array = [];

                            var id = item['id'];

                            var tipo = '';
                            if(item['tipoid'] != null){
                                if(item['tipoid'] == '1'){
                                    tipo = '<span class="badge badge-info">'+item['tipo']+'</span>';
                                }else if(item['tipoid'] == '2'){
                                    tipo = '<span class="badge badge-danger">'+item['tipo']+'</span>';
                                }else if(item['tipoid'] == '3'){
                                    tipo = '<span class="badge badge-warning">'+item['tipo']+'</span>';
                                }else{
                                    tipo = '<span class="badge badge-primary">'+item['tipo']+'</span>';
                                }
                            }

                            var estado = '';
                            if(item['estado'] != null){
                                if(item['estadoid'] != '4'){
                                    estado = '<span class="badge badge-danger">'+item['estado']+'</span>';
                                }else{
                                    estado = '<span class="badge badge-success">'+item['estado']+'</span>';
                                }
                            }else{
                                estado = '<span class="badge badge-success"><br/></span>';
                            }

                            var input = '<div class="uniform-checker" id="uniform-'+item['id']+'"><span><input type="checkbox" name="empresa" id="'+item['id']+'" class="form-check-input-styled form-check-input" value="1" /></span></div>';

                            array.push(input, estado, tipo, ''+item['empresa']+'', ''+item['codigo']+'', ''+item["cif"]+'', ''+item['telefono1']+'', ''+item['telefono2']+'', ''+item['email']+'', ''+item['colaborador']+'', ''+item['tecnico']+'', ''+item['agente']+'', ''+item['medico']+'', ''+item['responsableadministrativo']+'', ''+item['domicilio_postal']+'', ''+item['localidad_postal']+'', ''+item['codigo_postal_postal']+'', ''+item['trabajadores']+'');
                            arrayNewData.push(array);
                        });

                        $.extend( $.fn.dataTable.defaults, {
                            // autoWidth: true,
                            // columnDefs: [{
                            //     width: 100,
                            // }],
                            // ordering: true,
                            deferRender: false,
                            dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                            lengthMenu: [[10, 25, 50, 100, 500, 2000, 5000], [10, 25, 50, 100, 500, 2000, 5000]],
                            language: {
                                search: '<span>Filtrar:</span> _INPUT_',
                                searchPlaceholder: 'Escriba para filtrar...',
                                lengthMenu: '<span>Mostrar:</span> _MENU_',
                                paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                            },
                            data: arrayNewData
                        });

                        $('.datatable-export-excel').DataTable({
                            buttons: {
                                buttons: [
                                    {
                                        extend: 'excelHtml5',
                                        className: 'btn btn-success',
                                        text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                                        fieldSeparator: '\t',
                                        extension: '.xlsx'
                                    }
                                ]
                            }
                        });
                    }else{

                        $.extend( $.fn.dataTable.defaults, {
                            // autoWidth: true,
                            // columnDefs: [{
                            //     width: 100,
                            // }],
                            // ordering: true,
                            deferRender: false,
                            dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                            lengthMenu: [[10, 25, 50, 100, 500, 2000, 5000], [10, 25, 50, 100, 500, 2000, 5000]],
                            language: {
                                search: '<span>Filtrar:</span> _INPUT_',
                                searchPlaceholder: 'Escriba para filtrar...',
                                lengthMenu: '<span>Mostrar:</span> _MENU_',
                                paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                            },
                        });

                        $('.datatable-export-excel').DataTable({
                            buttons: {
                                buttons: [
                                    {
                                        extend: 'excelHtml5',
                                        className: 'btn btn-success',
                                        text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                                        fieldSeparator: '\t',
                                        extension: '.xlsx'
                                    }
                                ]
                            }
                        });

                        table.context[0].oLanguage.sEmptyTable = "Sin registros";
                        table.clear().draw();
                    }

                    if(op == 1){
                        $('#btnFiltra').prop("disabled", false);
                        $('#btnFiltra').html("Filtrar");
                    }else{
                        $('#btnReset').prop("disabled", false);
                        $('#btnReset').html("Reset");
                    }

                },
                error: function(){
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

        var arrayEmpresas = [];
        //Boton que añade el contrato a la lista de contratos seleccionadas
        $(document).on('click', 'input[name=\'empresa\']', function(){
            var empresaId = $(this).attr('id');
            if ($(this).prop('checked')) {
                $('#uniform-'+empresaId+' span').addClass('checked');
                arrayEmpresas.push(empresaId);
            }else{
                $('#uniform-'+empresaId+' span').removeClass('checked');
                arrayEmpresas.splice($.inArray(empresaId, arrayEmpresas),1);
            }
        });

        //Boton que añade todas los contratos a la lista de contratos seleccionadas
        $(document).on('click', 'input[name=\'empresaAll\']', function(){
            var table = $('.datatable-export-excel').DataTable();
            var rowsCount = table.rows().count();
            var rows = table.rows({ search: 'applied' }).data();

            if($(this).prop('checked')){
                for(var i=0 ; rowsCount>i;i++){
                    var dataCheckbox = rows[i][0];
                    var check = $(dataCheckbox).find("input[name=\'empresa\']");
                    var empresaId = $(check).attr('id');
                    $('#uniform-'+empresaId+' span').addClass('checked');
                    arrayEmpresas.push(empresaId);
                }
            }else{
                for(var i=0 ; rowsCount>i;i++){
                    var dataCheckbox = rows[i][0];
                    var check = $(dataCheckbox).find("input[name=\'empresa\']");
                    var empresaId = $(check).attr('id');
                    $('#uniform-'+empresaId+' span').removeClass('checked');
                }
                arrayEmpresas.splice(0, arrayEmpresas.length);
            }
        });

    </script>

