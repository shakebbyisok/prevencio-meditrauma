{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'trabajadores' %}

{% block arrow %}<a href="{{ path('tecnico_trabajador_show') }}" style="color: black;"><i class="icon-arrow-left52 mr-2"></i></a>{% endblock %}
{% block title %} {% trans %}TRANS_TRABAJADOR{% endtrans %} {% endblock %}
{% block subtitle %}
    {{ form.vars.value.nombre }}
{% endblock %}

{% block card %}

    <script type="text/javascript">
        $(document).ready(function(){

            var arrayDataCentros = [];
            var arrayDataAltasBajas = [];
            var arrayPuestosTrabajoTrabajador = [];

            $.extend( $.fn.dataTable.defaults, {
                autoWidth: true,
                columnDefs: [{
                    width: 100,
                }],
                ordering: true,
                deferRender: false,
                dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                language: {
                    search: '<span>Filtrar:</span> _INPUT_',
                    searchPlaceholder: 'Escriba para filtrar...',
                    lengthMenu: '<span>Mostrar:</span> _MENU_',
                    paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                },
            });

            {% for ctt in centrosTrabajoTrabajador %}
                var array = [];
                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').editTrabajadorTecnicoSn is not null %}
                    {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn %}
                        actions += '<a href="#" data-id="{{ ctt.id }}" target="_self" class="list-icons-item eliminarCentroTrabajador"><i class="icon-trash"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                array.push('{{ ctt.nombre }}', actions);
                arrayDataCentros.push(array);
            {% endfor %}

            $('.datatable-export-excel-centros').DataTable({
                data: arrayDataCentros,
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').exportTrabajadorTecnicoSn is not null %}
                {% if app.session.get('privilegiosRol').exportTrabajadorTecnicoSn != true %}
                    $('#datatable-centros .dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            // Format displayed data
            function formatRepo (repo) {
                if (repo.loading) return repo.text;

                var markup = '<div class="clearfix">' +
                    '<div>' + repo.descripcion + '</div>' +
                    '</div>';

                return markup;
            }

            // Format selection
            function formatRepoSelection (repo) {
                return repo.full_name || repo.text;
            }

            // Initialize
            $('.js_busca_ajax_centro').select2({
                ajax: {
                    url: "{{ path('busca_ajax_query',{ 'option': 'centroTrabajo' }) }}",
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return {
                            q: params.term, // search term
                            page: params.page
                        };
                    },
                    processResults: function (data, params) {

                        var select2Data = $.map(JSON.parse(data), function (obj) {
                            obj.id = parseInt(obj.id);
                            obj.text = obj.descripcion;

                            return obj;
                        });

                        return {
                            results: select2Data
                        };
                    },
                    cache: true
                },
                escapeMarkup: function (markup) { return markup; }, // let our custom formatter work
                minimumInputLength: 3,
                templateResult: formatRepo, // omitted for brevity, see the source of this page
                templateSelection: formatRepoSelection // omitted for brevity, see the source of this page
            });

            //Boton para añadir un centro de trabajo
            $('#btnAddCentroTrabajoEmpresa').click(function(){

                if($('#centroTrabajo').val() == ''){
                    $('#centroTrabajo').focus();
                    return false;
                }

                $('#btnAddCentroTrabajoEmpresa').prop("disabled", true);
                $('#btnAddCentroTrabajoEmpresa').html("<i class=\"icon-spinner2 spinner mr-2\"></i>{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");

                $.ajax({
                    type: "POST",
                    url: "{{ path('trabajador_add_centro_trabajo') }}",
                    data: {
                        'centroTrabajoId': $('#centroTrabajo').val(),
                        'trabajadorId': '{{ app.request.get('id') }}'
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnAddCentroTrabajoEmpresa').prop("disabled", false);
                        $('#btnAddCentroTrabajoEmpresa').html("{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");
                    }
                });
            });

            //Si estan entrando un nuevo trabajador comprobamos que el dni no exista
            {% if trabajadorNuevoSn is defined and trabajadorNuevoSn == true %}
                $('#trabajador_tecnico_dni').focusout(function(){
                    var dni = $(this).val();
                    $.ajax({
                        type: "POST",
                        url: "{{ path('tecnico_trabajador_check_dni') }}",
                        data: {
                            'dni': dni,
                        },
                        dataType: "JSON",
                        success: function (data) {
                            if(data.success == 1){
                                $('#trabajador_tecnico_dni').addClass('border-danger');
                                $('.incorrectoDni').css('display', 'block');
                                $('.incorrectoDni').html('{% trans %}TRANS_TRABAJADOR_EXISTE{% endtrans %}');
                                $('#trabajador_tecnico_guardar').css('display', 'none');
                            }else{
                                $('#trabajador_tecnico_dni').removeClass('border-danger');
                                $('.incorrectoDni').css('display', 'none');
                                $('#trabajador_tecnico_guardar').css('display', 'block');
                            }
                        },
                        error: function(){
                            new PNotify({
                                title: 'Ops!',
                                text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                                icon: 'icon-blocked',
                                type: 'error'
                            });
                        }
                    });

                });
            {% endif %}

            {% for abt in altaBajaTrabajador %}
                var array = [];
                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').editTrabajadorTecnicoSn is not null %}
                    {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn %}
                        actions += '<a href="#" class="list-icons-item" onclick="recuperaAltaBaja(\'{{ abt.id }}\');" data-toggle="modal" data-target="#modal_editar_alta_baja"><i class="icon-pencil7"></i></a>';
                    {% endif %}
                {% endif %}

                {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').editTrabajadorSn is not null %}
                    {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn %}
                        actions += '<a href="#" data-id="{{ abt.id }}" target="_self" class="list-icons-item eliminarAltaBaja"><i class="icon-trash"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                var fechaAlta = '';
                var fechaBaja = '';
                var empresa = '';

                {% if abt.fechaAlta is not null %}
                    fechaAlta = '{{ abt.fechaAlta|date('d/m/Y') }}';
                {% endif %}

                var estado = '<span class="badge badge-success">{% trans %}TRANS_ACTIVO{% endtrans %}</span>';
                {% if abt.fechaBaja is not null %}
                    fechaBaja = '{{ abt.fechaBaja|date('d/m/Y') }}';
                    estado = '<span class="badge badge-danger">{% trans %}TRANS_NO_ACTIVO{% endtrans %}</span>';
                {% endif %}

                {% if abt.empresa is not null %}
                    empresa = '{{ abt.empresa.empresa }}';
                {% endif %}

                array.push(estado, empresa, fechaAlta, fechaBaja, '{{ abt.motivoBaja }}', actions);
                arrayDataAltasBajas.push(array);
            {% endfor %}

            $('.datatable-export-excel-altasbajas').DataTable({
                data: arrayDataAltasBajas,
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').exportTrabajadorTecnicoSn is not null %}
                {% if app.session.get('privilegiosRol').exportTrabajadorTecnicoSn != true %}
                    $('#datatable-altasbajas .dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            {% for ptt in puestoTrabajoTrabajador %}
                var array = [];
                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').editTrabajadorTecnicoSn is not null %}
                    {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn %}
                        actions += '<a href="{{ path('tecnico_evaluaciones_evaluacion_puesto_trabajo_update_trabajador', { "id": ptt.id, "empresaId": ptt.empresaid }) }}" class="list-icons-item"><i class="icon-pencil7"></i></a>';
                    {% endif %}
                {% endif %}

                {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').editTrabajadorSn is not null %}
                    {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn %}
                        actions += '<a href="#" data-id="{{ ptt.id }}" class="list-icons-item eliminarPuestoTrabajoTrabajador"><i class="icon-trash"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                array.push('{{ ptt.empresa }}', '{{ ptt.puesto }}', '{{ ptt.fecha_alta }}', '{{ ptt.fecha_baja }}', actions);
                arrayPuestosTrabajoTrabajador.push(array);
            {% endfor %}

            $('.datatable-export-excel-puestostrabajo').DataTable({
                data: arrayPuestosTrabajoTrabajador,
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').exportTrabajadorTecnicoSn is not null %}
                {% if app.session.get('privilegiosRol').exportTrabajadorTecnicoSn != true %}
                    $('#datatable-puestostrabajo .dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            //Boton para editar una alta/baja
            $('#btnUpdateAltaBaja').click(function(){

                var empresaEditar = $('#empresaEditar').val();
                var fechaAltaEditar = $('#fechaAltaEditar').val();
                var fechaBajaEditar = $('#fechaBajaEditar').val();
                var motivoBajaEditar = $('#motivoBajaEditar').val();

                if(empresaEditar == ''){
                    $('#empresaEditar').focus();
                    return false;
                }

                $('#btnUpdateAltaBaja').prop("disabled", true);
                $('#btnUpdateAltaBaja').html("<i class=\"icon-spinner2 spinner mr-2\"></i>Guardar");

                $.ajax({
                    type: "POST",
                    url: "{{ path('trabajador_update_alta_baja') }}",
                    data: {
                        'altaBajaId': $('#altaBajaId').val(),
                        'fechaAlta': fechaAltaEditar,
                        'fechaBaja': fechaBajaEditar,
                        'empresaId' : empresaEditar,
                        'motivoBaja': motivoBajaEditar
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnUpdateAltaBaja').prop("disabled", false);
                        $('#btnUpdateAltaBaja').html("Guardar");
                    }
                });
            });

            $('#trabajador_tecnico_guardar').click(function () {
                var dni = $('#trabajador_tecnico_dni').val();
                if(dni != ""){
                    if(dni.length != 9){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from 'revision' %}TRANS_DNI_VALIDO{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });
                        return false;
                    }
                }

                var movil = $('#trabajador_tecnico_telefono1').val();
                if(movil != ""){
                    if (movil.length != 9 || isNaN(movil)) {
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_TELEFONO_NO_VALIDO{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });
                        return false;
                    }
                }
            });

        });

        $(document).on('click', 'a.eliminarCentroTrabajador', function(){
            var id = $(this).data('id');

            bootbox.confirm({
                title: '{% trans from 'messages' %}TRANS_ELIMINAR_CENTRO{% endtrans %}',
                message: '{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}',
                buttons: {
                    confirm: {
                        label: 'Si',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-link'
                    }
                },
                callback: function (result) {
                    if(result == true){
                        deleteTrabajadorCentro(id)
                    }
                }
            });
        });

        function deleteTrabajadorCentro(id) {
            $.ajax({
                type: "POST",
                url: "{{ path('trabajador_delete_centro_trabajo') }}",
                data: {
                    'trabajadorEmpresaId': id
                },
                dataType: "JSON",
                success: function (data) {
                    if (data == "OK") {
                        location.reload();
                    }
                },
                error: function () {
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

        $(document).on('click', 'a.eliminarAltaBaja', function(){
            var id = $(this).data('id');

            bootbox.confirm({
                title: '{% trans from 'messages' %}TRANS_ELIMINAR_ALTA_BAJA{% endtrans %}',
                message: '{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}',
                buttons: {
                    confirm: {
                        label: 'Si',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-link'
                    }
                },
                callback: function (result) {
                    if(result == true){
                        deleteAltaBaja(id)
                    }
                }
            });
        });

        function deleteAltaBaja(id) {
            $.ajax({
                type: "POST",
                url: "{{ path('trabajador_delete_alta_baja') }}",
                data: {
                    'altaBajaId': id
                },
                dataType: "JSON",
                success: function (data) {
                    if (data == "OK") {
                        location.reload();
                    }
                },
                error: function () {
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

        function recuperaAltaBaja(id) {
            $.ajax({
                type: "POST",
                url: "{{ path('trabajador_recupera_alta_baja') }}",
                data: {
                    'altaBajaId': id
                },
                dataType: "JSON",
                success: function (data) {
                    if (data != null) {
                        $('#empresaEditar').val(data.empresa).change();
                        $('#fechaAltaEditar').val(data.fechaAlta);
                        $('#fechaBajaEditar').val(data.fechaBaja);
                        $('#motivoBajaEditar').val(data.motivoBaja);
                        $('#altaBajaId').val(data.id);
                    }
                },
                error: function () {
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

        $(document).on('click', 'a.eliminarPuestoTrabajoTrabajador', function(){
            var id = $(this).data('id');

            bootbox.confirm({
                title: '{% trans from 'messages' %}TRANS_ELIMINAR_PUESTO_TRABAJO_TRABAJADOR{% endtrans %}',
                message: '{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}',
                buttons: {
                    confirm: {
                        label: 'Si',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-link'
                    }
                },
                callback: function (result) {
                    if(result == true){
                        deletePuestoTrabajoTrabajador(id)
                    }
                }
            });
        });

        function deletePuestoTrabajoTrabajador(id) {
            $.ajax({
                type: "POST",
                url: "{{ path('tecnico_evaluaciones_evaluacion_puesto_trabajo_delete_trabajador') }}",
                data: {
                    'puestoTrabajoTrabajadorId': id
                },
                dataType: "JSON",
                success: function (data) {
                    if (data == "OK") {
                        location.reload();
                    }
                },
                error: function () {
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

    </script>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}

            <ul class="nav nav-tabs nav-tabs-highlight">
                {% if (app.request.get('id') is defined and app.request.get('id') is not empty ) %}
                    <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">{% trans %}TRANS_DATOS_BASICOS{% endtrans %}</a></li>
                    <li class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">{% trans %}TRANS_MENU_3{% endtrans %}</a></li>
                    <li class="nav-item"><a href="#tab3" class="nav-link" data-toggle="tab">{% trans %}TRANS_MENU_4{% endtrans %}</a></li>
                    <li class="nav-item"><a href="#tab4" class="nav-link" data-toggle="tab">{% trans %}TRANS_PUESTOS_TRABAJO{% endtrans %}</a></li>
                {% else %}
                    <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">{% trans %}TRANS_DATOS_BASICOS{% endtrans %}</a></li>
                    <li class="nav-item"><a href="#" class="nav-link" onclick="alert('{% trans from "messages" %}TRANS_MSG_GUARDAR_ANTES{% endtrans %}');">{% trans %}TRANS_MENU_3{% endtrans %}</a></li>
                    <li class="nav-item"><a href="#" class="nav-link" onclick="alert('{% trans from "messages" %}TRANS_MSG_GUARDAR_ANTES{% endtrans %}');">{% trans %}TRANS_MENU_4{% endtrans %}</a></li>
                    <li class="nav-item"><a href="#" class="nav-link" onclick="alert('{% trans from "messages" %}TRANS_MSG_GUARDAR_ANTES{% endtrans %}');">{% trans %}TRANS_PUESTOS_TRABAJO{% endtrans %}</a></li>
                {% endif %}
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade active show" id="tab1">
                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(form.nombre) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.dni) }}
                            <span class="form-text text-danger incorrectoDni" style="display: none;">{% trans %}TRANS_TRABAJADOR_EXISTE{% endtrans %}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(form.fechaNacimiento) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.sexo) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.discapacidad) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(form.domicilio) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.telefono1) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.mail) }}
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab2">
                    <div class="row">
                        <div class="col-lg-12">
                            {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn is defined and app.session.get('privilegiosRol').editTrabajadorTecnicoSn is not null %}
                                {% if app.session.get('privilegiosRol').editTrabajadorTecnicoSn %}
                                    <a href="#" class="btn btn-labeled btn-labeled-left bg-grey-300" data-toggle="modal" data-target="#modal_añadir_centro">{% trans from 'empresas' %}TRANS_AÑADIR_CENTRO{% endtrans %}<b><i class="icon-plus3"></i></b></a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>

                    <br/>
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="datatable-centros" class="dataTables_wrapper no-footer">
                                <div class="datatable-scroll">
                                    <table class="table datatable-export-excel-centros dataTable no-footer" role="grid" aria-describedby="DataTables_Table_0_info" style="width: 100% !important;">
                                        <thead>
                                        <tr class="bg-grey-300" role="row">
                                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                                                aria-label="Nombre" aria-sort="ascending">{% trans from 'empresas' %}TRANS_NOMBRE{% endtrans %}
                                            </th>
                                            <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-label="Actions"
                                                style="width: 100px;">{% trans from 'messages' %}TRANS_ACCIONES{% endtrans %}
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab3">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="datatable-altasbajas" class="dataTables_wrapper no-footer">
                                <div class="datatable-scroll">
                                    <table class="table datatable-export-excel-altasbajas dataTable no-footer" role="grid" aria-describedby="DataTables_Table_0_info" style="width: 100% !important;">
                                        <thead>
