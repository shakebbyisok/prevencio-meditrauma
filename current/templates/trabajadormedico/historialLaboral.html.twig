{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'trabajadores' %}

{% block arrow %}<a href="{{ path('medico_trabajador_show') }}" style="color: black;" onclick="return confirm('{% trans from 'messages' %}TRANS_CONFIRM_RETURN{% endtrans %}')"><i class="icon-arrow-left52 mr-2"></i></a>{% endblock %}
{% block title %} {% trans %}TRANS_TRABAJADOR{% endtrans %} {% endblock %}
{% block subtitle %}
    {% trans %}TRANS_HISTORIAL_LABORAL{% endtrans %}
{% endblock %}

{% block card %}

    <div class="card">
        <div class="card-body">

            <div class="row">
                <div class="col-lg-12">
                    <h3><strong>{% trans %}TRANS_HISTORIAL_LABORAL{% endtrans %}</strong>: {{ trabajador.nombre }}</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h4><strong>{% trans %}TRANS_EDAD_2{% endtrans %}:</strong> {{ trabajador.edad }}</h4>
                </div>
            </div>

            <hr/>

            <div class="row">
                <div class="col-lg-12">
                    <h4><strong>{% trans %}TRANS_PUESTO_TRABAJO{% endtrans %}:</strong> {{ puestoTrabajo }}</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <label><strong>{% trans %}TRANS_FECHA_ALTA{% endtrans %}:</strong> {{ fechaAlta }}</label>
                </div>
            </div>

            <hr/>

            <div class="row">
                <div class="col-lg-12">
                    <h4><strong>{% trans %}TRANS_DESCRIPCION{% endtrans %}:</strong> {{ trabajador.observaciones }}</h4>
                </div>
            </div>

        </div>
    </div>

{% endblock %}



