{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'trabajadores' %}

{% block arrow %}<a href="{{ path('medico_trabajador_show') }}" style="color: black;" onclick="return confirm('{% trans from 'messages' %}TRANS_CONFIRM_RETURN{% endtrans %}')"><i class="icon-arrow-left52 mr-2"></i></a>{% endblock %}
{% block title %} {% trans %}TRANS_TRABAJADOR{% endtrans %} {% endblock %}
{% block subtitle %}
    {{ form.vars.value.nombre }} [{{ form.vars.value.dni }}]
{% endblock %}

{% block card %}

    <style>
        .custom-file-label { opacity: 0; }
        .custom-file-input { opacity: 1; }
    </style>

    <script src="{{ asset('jstree/jstree.min.js') }}"></script>
    <link href="{{ asset('jstree/themes/default/style.min.css') }}" rel="stylesheet" type="text/css">

    <script type="text/javascript">
        $(document).ready(function(){

            var arrayDataAltasBajas = [];
            var arrayDataEvaluaciones = [];
            var arrayDataEnfermedades = [];
            var arrayDataRevisiones = [];

            $.extend( $.fn.dataTable.defaults, {
                autoWidth: true,
                columnDefs: [{
                    width: 100,
                }],
                ordering: true,
                deferRender: false,
                dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                language: {
                    search: '<span>Filtrar:</span> _INPUT_',
                    searchPlaceholder: 'Escriba para filtrar...',
                    lengthMenu: '<span>Mostrar:</span> _MENU_',
                    paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                },
            });

            {% for abt in altaBajaTrabajador %}
                var array = [];

                var fechaBaja = '';
                var empresa = '';
                var fechaAlta = '';

                var estado = '<span class="badge badge-success">{% trans %}TRANS_ACTIVO{% endtrans %}</span>';
                {% if abt.fechaBaja is not null %}
                    fechaBaja = '{{ abt.fechaBaja|date('d/m/Y') }}';
                    estado = '<span class="badge badge-danger">{% trans %}TRANS_NO_ACTIVO{% endtrans %}</span>';
                {% endif %}

                {% if abt.empresa is not empty %}
                    empresa = '{{ abt.empresa.empresa }}';
                {% endif %}

                {% if abt.fechaAlta is not empty %}
                    fechaAlta = '{{ abt.fechaAlta|date('d/m/Y') }}';
                {% endif %}

                array.push(estado, empresa, fechaAlta, fechaBaja, '{{ abt.motivoBaja }}');
                arrayDataAltasBajas.push(array);
            {% endfor %}

            $('.datatable-export-excel-altasbajas').DataTable({
                data: arrayDataAltasBajas,
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportTrabajadorMedicoSn is defined and app.session.get('privilegiosRol').exportTrabajadorMedicoSn is not null %}
                {% if app.session.get('privilegiosRol').exportTrabajadorMedicoSn != true %}
                    $('#datatable-altasbajas .dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            {% for e in evaluaciones %}
                var array = [];

                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').editEvaluacionSn is defined and app.session.get('privilegiosRol').editEvaluacionSn is not null %}
                    {% if app.session.get('privilegiosRol').editEvaluacionSn %}
                        actions += '<a href="{{ path('medico_trabajador_puesto_trabajo_evaluar', { "id": e.puestotrabajoevaluarid }) }}" class="list-icons-item" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                array.push(actions, '{{ e.empresa }}', '{{ e.centro }}', '{{ e.puestotrabajo }}', '{{ e.fechainicio }}', '{{ e.fechafin }}', '{{ e.tipoevaluacion }}', '{{ e.metodologia }}');
                arrayDataEvaluaciones.push(array);
            {% endfor %}

            $('.datatable-export-excel-evaluaciones').DataTable({
                data: arrayDataEvaluaciones,
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportTrabajadorMedicoSn is defined and app.session.get('privilegiosRol').exportTrabajadorMedicoSn is not null %}
                {% if app.session.get('privilegiosRol').exportTrabajadorMedicoSn != true %}
                    $('#datatable-evaluaciones .dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            {% for en in enfermedades %}
                var array = [];

                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').editEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').editEnfermedadProfesionalSn is not null %}
                    {% if app.session.get('privilegiosRol').editEnfermedadProfesionalSn %}
                        actions += '<a href="#" data-id="{{ en.id }}" target="_self" class="list-icons-item recuperaEnfermedad" data-toggle="modal" data-target="#modal_editar_enfermedad"><i class="icon-pencil7"></i></a>';
                    {% endif %}
                {% endif %}

                {% if app.session.get('privilegiosRol').deleteEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').deleteEnfermedadProfesionalSn is not null %}
                    {% if app.session.get('privilegiosRol').deleteEnfermedadProfesionalSn %}
                        actions += '<a href="#" data-id="{{ en.id }}" target="_self" class="list-icons-item eliminarEnfermedad"><i class="icon-trash"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                array.push(actions, '{{ en.enfermedad.descripcion }}');
                arrayDataEnfermedades.push(array);
            {% endfor %}

            $('.datatable-export-excel-enfermedades').DataTable({
                data: arrayDataEnfermedades,
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').exportEnfermedadProfesionalSn is not null %}
                {% if app.session.get('privilegiosRol').exportEnfermedadProfesionalSn != true %}
                    $('#datatable-enfermedades .dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            {% for r in revisiones %}
                var array = [];

                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').editEnfermedadProfesionalSn is defined and app.session.get('privilegiosRol').editEnfermedadProfesionalSn is not null %}
                    {% if app.session.get('privilegiosRol').editEnfermedadProfesionalSn %}
                        actions += '<a href="{{ path('medico_revision_update', { "id": r.id }) }}" class="list-icons-item" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>';
                    {% endif %}
                {% endif %}

                actions += '</div>';

                var apto = '';
                var fecha = '';
                var empresa = '';
                var puestoTrabajo = '';

                {% if r.apto is not empty %}
                    {% if r.apto.id == 1 %}
                        apto = '<span class="badge badge-success"><i class="icon-check"></i></span>';
                    {% elseif r.apto.id == 2 %}
                        apto = '<span class="badge badge-warning"><i class="icon-check"></i></span>';
                    {% elseif r.apto.id == 3 %}
                        apto = '<span class="badge badge-danger"><i class="icon-cross"></i></span>';
                    {% endif %}
                {% else %}
                    apto = '';
                {% endif %}

                {% if r.fecha is not null %}
                    fecha = '{{ r.fecha|date('d/m/Y') }}';
                {% endif %}

                {% if r.empresa is not empty %}
                    empresa = '{{ r.empresa.empresa }}';
                {% endif %}

                {% if r.puestoTrabajo is not empty %}
                    puestoTrabajo = '{{ r.puestoTrabajo.descripcion }}';
                {% endif %}

                array.push(actions, fecha, empresa, puestoTrabajo, apto);
                arrayDataRevisiones.push(array);
            {% endfor %}

            $('.datatable-export-excel-revisiones').DataTable({
                data: arrayDataRevisiones,
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportRevisionSn is defined and app.session.get('privilegiosRol').exportRevisionSn is not null %}
                {% if app.session.get('privilegiosRol').exportRevisionSn != true %}
                    $('#datatable-revisiones .dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

            //Boton que elimina el fichero seleccionado
            $('#btnDeletePlantilla').click(function(){

                $('#btnDeletePlantilla').prop("disabled", true);
                $('#btnDeletePlantilla').html("<i class=\"icon-spinner2 spinner mr-2\"></i>{% trans from 'messages' %}TRANS_ELIMINAR{% endtrans %}");

                $.ajax({
                    type: "POST",
                    url: "{{ path('gdoc_plantilla_delete') }}",
                    data: {
                        'id': $('#idFichero').val(),
                        'tipo': 2
                    },
                    dataType: "JSON",
                    success: function (data) {

                        if(data == "OK"){

                            $('#btnDeletePlantilla').prop("disabled", false);
                            $('#btnDeletePlantilla').html("{% trans from 'messages' %}TRANS_ELIMINAR{% endtrans %}");

                            new PNotify({
                                title: '{% trans from "messages" %}TRANS_AVISO_ELIMINADO{% endtrans %}',
                                text: '{% trans from "messages" %}TRANS_AVISO_ELIMINADO_MSG{% endtrans %}',
                                icon: 'icon-checkmark3',
                                type: 'success'
                            });

                            setTimeout(function() {
                                location.reload();
                            }, 2000);

                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnDeletePlantilla').prop("disabled", false);
                        $('#btnDeletePlantilla').html("{% trans from 'messages' %}TRANS_ELIMINAR{% endtrans %}");
                    }
                });

            });

            //Botón que añade la nueva carpeta
            $('#btnAddCarpeta').click(function(){

                var nombreCarpeta = $('#nombreCarpeta').val();
                var carpetaPadre = $('#carpetaPadre').val();

                if(nombreCarpeta == "" || nombreCarpeta == null){
                    $('#nombreCarpeta').focus();
                    return false;
                }

                $('#btnAddCarpeta').prop("disabled", true);
                $('#btnAddCarpeta').html("<i class=\"icon-spinner2 spinner mr-2\"></i>{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");

                $.ajax({
                    type: "POST",
                    url: "{{ path('gdoc_carpeta_add') }}",
                    data: {
                        'nombre': nombreCarpeta,
                        'padre': carpetaPadre,
                        'tipo': 2,
                        'trabajadorId': '{{ app.request.get('id') }}'
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnAddCarpeta').prop("disabled", false);
                        $('#btnAddCarpeta').html("{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");
                    }
                });
            });

            //Botón que modifica la carpeta seleccionada
            $('#btnUpdateCarpeta').click(function(){

                var nombreCarpeta = $('#nombreCarpetaEditar').val();
                var carpetaPadre = $('#carpetaPadreEditar').val();
                var id = $('#idCarpeta').val();

                if(nombreCarpeta == "" || nombreCarpeta == null){
                    $('#nombreCarpetaEditar').focus();
                    return false;
                }

                $('#btnUpdateCarpeta').prop("disabled", true);
                $('#btnUpdateCarpeta').html("<i class=\"icon-spinner2 spinner mr-2\"></i>Guardar");

                $.ajax({
                    type: "POST",
                    url: "{{ path('gdoc_carpeta_update') }}",
                    data: {
                        'id': id,
                        'nombre': nombreCarpeta,
                        'padre': carpetaPadre,
                        'tipo': 2,
                        'trabajadorId': '{{ app.request.get('id') }}'
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnUpdateCarpeta').prop("disabled", false);
                        $('#btnUpdateCarpeta').html("Guardar");
                    }
                });
            });

            //Botón que modifica la carpeta seleccionada
            $('#btnDeleteCarpeta').click(function(){

                var id = $('#idCarpeta').val();

                $('#btnDeleteCarpeta').prop("disabled", true);
                $('#btnDeleteCarpeta').html("<i class=\"icon-spinner2 spinner mr-2\"></i>Eliminar");

                $.ajax({
                    type: "POST",
                    url: "{{ path('gdoc_carpeta_delete') }}",
                    data: {
                        'id': id,
                        'tipo': 2
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnUpdateCarpeta').prop("disabled", false);
                        $('#btnUpdateCarpeta').html("Guardar");
                    }
                });
            });

            //Botón que añade la nueva enfermedad
            $('#btnAddEnfermedad').click(function(){

                var enfermedad = $('#enfermedadDescripcion').val();

                if(enfermedad == "" || enfermedad == null){
                    $('#enfermedadDescripcion').focus();
                    return false;
                }

                $('#btnAddEnfermedad').prop("disabled", true);
                $('#btnAddEnfermedad').html("<i class=\"icon-spinner2 spinner mr-2\"></i>{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");

                $.ajax({
                    type: "POST",
                    url: "{{ path('medico_enfermedad_add_trabajador') }}",
                    data: {
                        'enfermedadId': enfermedad,
                        'trabajadorId': '{{ app.request.get('id') }}',
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnAddEnfermedad').prop("disabled", false);
                        $('#btnAddEnfermedad').html("{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");
                    }
                });
            });

            //Botón que modifica la enfermedad
            $('#btnUpdateEnfermedad').click(function(){

                var enfermedadEditar = $('#enfermedadDescripcionEditar').val();

                if(enfermedadEditar == "" || enfermedadEditar == null){
                    $('#enfermedadDescripcionEditar').focus();
                    return false;
                }

                $('#btnUpdateEnfermedad').prop("disabled", true);
                $('#btnUpdateEnfermedad').html("<i class=\"icon-spinner2 spinner mr-2\"></i>Guardar");

                $.ajax({
                    type: "POST",
                    url: "{{ path('medico_enfermedad_update_trabajador') }}",
                    data: {
                        'enfermedadId': enfermedadEditar,
                        'trabajadorEnfermedadId': $('#enfermedadIdEditar').val(),
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnUpdateEnfermedad').prop("disabled", false);
                        $('#btnUpdateEnfermedad').html("Guardar");
                    }
                });
            });

            $('#trabajador_medico_guardar').click(function () {
                var dni = $('#trabajador_medico_dni').val();
                if(dni != ""){
                    if(dni.length != 9){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from 'revision' %}TRANS_DNI_VALIDO{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });
                        return false;
                    }
                }

                var movil = $('#trabajador_medico_telefono1').val();
                if(movil != ""){
                    if (movil.length != 9 || isNaN(movil)) {
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_TELEFONO_NO_VALIDO{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });
                        return false;
                    }
                }
            });

            var xhr;
            var json = {{ tree | raw }};
            var selected_id;

            function ControlViews() {
                selected_id = $("#tree").find(".jstree-clicked").attr('id');
                //Algun nodo selecionado.
                if (typeof selected_id != 'undefined' && selected_id != '') {
                    var remove = /_anchor$/;
                    selected_id = selected_id.replace(remove, "");
                    //FICHERO
                    if (selected_id.indexOf("fileId") == 0) {
                        selected_id = selected_id.replace("fileId", "");
                        plantillaAjaxRequest(selected_id);
                    }
                }
            }

            $(function () {
                $("#tree")
                    .jstree({
                        'core': {
                            'data': json,
                            'check_callback': true
                        },

                        'plugins': ["search", "sort", "state"]

                    })
                    .on('changed.jstree', function (e, data) {
                        if (xhr && xhr.readyState != 4) {
                            xhr.abort();
                        }
                        ControlViews();
                    })
                    .on('ready.jstree', function (e, data) {
                        var fileUploadedID = location.search.split('fileid=')[1];
                        //console.log(fileUploadedID);
                        if (typeof(fileUploadedID) != "undefined") {
                            var node = "fileId" + fileUploadedID;
                            $('#tree').jstree('deselect_all');
                            setTimeout(function(){
                                $('#tree').jstree('select_node', node);
                            },300);

                        }
                    });
            });

            ControlViews();

            //Evento click carpeta
            $('#tree').on("select_node.jstree", function (e, data) {
                var carpetaId = data.node['id'];
                if(carpetaId != "" && !isNaN(carpetaId)){
                    $.ajax({
                        type: 'POST',
                        url: '{{ path('gdoc_recupera_carpeta') }}',
                        data: {
                            'id': carpetaId,
                            'tipo': 2
                        },
                        dataType: 'json',
                        success: function (response) {
                            $("#idCarpeta").val(response.id);
                            $("#nombreCarpetaEditar").val(response.nombre);
                            $("#carpetaPadreEditar").val(response.padre).change();
                            $('#modal_editar_carpeta').modal('show');
                        }
                    });
                }
            });

            function plantillaAjaxRequest(plantillaId) {

                $("#nombreFichero").val("");
                $("#fechaFichero").val("");
                $("#usuarioFichero").val("");
                $("#tipoFichero").val("");
                $("#midaFichero").val("");
                $("#idFichero").val("");
                $("#btnDownPlantilla").attr('href', "");
                $("#btnOpenPlantilla").attr('href', "");

                $('#modal_view_fichero').modal('show');

                var url = '{{ path('gdoc_plantilla_view') }}';

                $("#btnOpenPlantilla").hide();
                $("#btnDownPlantilla").hide();
                $('#btnDeletePlantilla').hide();

                var trabajadorId = '{{ app.request.get('id') }}';

                xhr = $.ajax({
                    type: 'POST',
                    url: url,
                    data: {
                        'id': plantillaId,
                        'tipo': 2,
                        'trabajadorId': '{{ app.request.get('id') }}'
                    },
                    dataType: 'json',
                    success: function (response) {
                        $("#nombreFichero").val(response.name);
                        $("#fechaFichero").val(response.fecha);
                        $("#usuarioFichero").val(response.usuario);
                        $("#tipoFichero").val(response.tipo);
                        $("#midaFichero").val(response.mida);
                        $("#idFichero").val(response.id);
                        $("#btnDownPlantilla").attr('href', '{{ path('gdoc_down_plantilla') }}?plantillaId='+response.down+'&tipo=2&trabajadorId='+trabajadorId);
                        $("#btnOpenPlantilla").attr('href', '{{ path('gdoc_open_plantilla') }}?plantillaId='+response.open+'&tipo=2&trabajadorId='+trabajadorId);

                        $("#btnDownPlantilla").show();
                        $("#btnOpenPlantilla").show();
                        $('#btnDeletePlantilla').show();
                    }
                });
            }

            function deleteEnfermedad(id) {
                $.ajax({
                    type: "POST",
                    url: "{{ path('medico_enfermedad_delete_trabajador') }}",
                    data: {
                        'trabajadorEnfermedadId': id,
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if (data == "OK") {
                            location.reload();
                        }
                    },
                    error: function () {
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });
                    }
                });
            }

            //Boton que elimina el tecnico seleccionado
            $(document).on('click', 'a.eliminarEnfermedad', function(){
                var id = $(this).data('id');
                bootbox.confirm({
                    title: '{% trans from 'messages' %}TRANS_ELIMINAR_ENFERMEDAD{% endtrans %}',
                    message: '{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}',
                    buttons: {
                        confirm: {
                            label: 'Si',
                            className: 'btn-primary'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-link'
                        }
                    },
                    callback: function (result) {
                        if(result == true){
                            deleteEnfermedad(id)
                        }
                    }
                });
            });

            function recuperaTrabajadorEnfermedad(id) {
                $.ajax({
                    type: "POST",
                    url: "{{ path('medico_enfermedad_recupera_trabajador') }}",
                    data: {
                        'trabajadorEnfermedadId': id
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if (data != null) {
                            $('#enfermedadDescripcionEditar').val(data.enfermedad).change();
                            $('#enfermedadIdEditar').val(data.id);
                        }
                    },
                    error: function () {
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });
                    }
                });
            }

