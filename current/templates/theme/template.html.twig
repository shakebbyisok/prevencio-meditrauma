{% include 'theme/header.html.twig' %}

{% set page = app.request.attributes.get('_route') %}
<body class="navbar-top">

{% block navbar %}
    <!-- Main navbar -->
    <div class="navbar navbar-expand-md navbar-light fixed-top">

        <!-- Header with logos -->
        <div class="navbar-header navbar-dark d-none d-md-flex align-items-md-center">

            <div class="navbar-brand navbar-brand-md">
                <a href="#" class="d-inline-block">
                    <h5 class="navbar-text" style="margin: 0 auto !important; padding: 0 !important; text-align: center !important;">MDT Prevención</h5>
                </a>
            </div>

            <div class="navbar-brand navbar-brand-xs">
                <a href="#" class="d-inline-block">
                    <h5 class="navbar-text" style="margin: 0 auto !important; padding: 0 !important; text-align: center !important;">MDT</h5>
                </a>
            </div>

        </div>
        <!-- /header with logos -->

        <!-- Mobile controls -->
        <div class="d-flex flex-1 d-md-none">
            <div class="navbar-brand mr-auto">
                <a href="#" class="d-inline-block">
                    <h5 class="navbar-text" style="margin: 0 auto !important; padding: 0 !important; text-align: center !important;">MDT Prevención</h5>
                </a>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-mobile">
                <i class="icon-tree5"></i>
            </button>

            <button class="navbar-toggler sidebar-mobile-main-toggle" type="button">
                <i class="icon-paragraph-justify3"></i>
            </button>
        </div>
        <!-- /mobile controls -->


        <!-- Navbar content -->
        <div class="collapse navbar-collapse" id="navbar-mobile">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="#" id="toggleNav" class="navbar-nav-link sidebar-control sidebar-main-toggle d-none d-md-block">
                        <i class="icon-paragraph-justify3"></i>
                    </a>
                </li>
            </ul>

            {% if app.session.get('empresa') is defined and app.session.get('empresa') is not null %}
                <h4 class="ml-md-3 mr-md-auto">
                    Empresa: <strong>{{ app.session.get('empresa').empresa }}</strong>

                    {% if app.session.get('rol') is defined and app.session.get('rol') is not null %}

                        {% if app.session.get('rol') == 1 %}

                            {% if app.session.get('privilegiosRol').viewEmpresaSn is defined and app.session.get('privilegiosRol').viewEmpresaSn is not null %}
                                {% if app.session.get('privilegiosRol').viewEmpresaSn %}
                                    <a href="{{ path('empresa_view', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Ver" data-container="body"><i class="icon-eye"></i></a>
                                {% endif %}
                            {% endif %}

                            {% if app.session.get('privilegiosRol').editEmpresaSn is defined and app.session.get('privilegiosRol').editEmpresaSn is not null %}
                                {% if app.session.get('privilegiosRol').editEmpresaSn %}
                                    <a href="{{ path('empresa_update', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>
                                {% endif %}
                            {% endif %}

                            <a href="{{ path('empresa_deselect', { 'tipo': 1 }) }}" data-popup="tooltip" title="Deseleccionar" data-container="body"><i class="icon-cancel-circle2"></i></a>

                        {% elseif app.session.get('rol') == 3 or app.session.get('rol') == 11 %}

                            {% if app.session.get('privilegiosRol').viewEmpresaTecnicoSn is defined and app.session.get('privilegiosRol').viewEmpresaTecnicoSn is not null %}
                                {% if app.session.get('privilegiosRol').viewEmpresaTecnicoSn %}
                                    <a href="{{ path('tecnico_empresa_view', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Ver" data-container="body"><i class="icon-eye"></i></a>
                                {% endif %}
                            {% endif %}

                            {% if app.session.get('privilegiosRol').editEmpresaTecnicoSn is defined and app.session.get('privilegiosRol').editEmpresaTecnicoSn is not null %}
                                {% if app.session.get('privilegiosRol').editEmpresaTecnicoSn %}
                                    <a href="{{ path('tecnico_empresa_update', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>
                                {% endif %}
                            {% endif %}

                            <a href="{{ path('empresa_deselect', { 'tipo': 2 }) }}" data-popup="tooltip" title="Deseleccionar" data-container="body"><i class="icon-cancel-circle2"></i></a>

                        {% elseif app.session.get('rol') == 4 %}

                            {% if app.session.get('privilegiosRol').viewEmpresaMedicoSn is defined and app.session.get('privilegiosRol').viewEmpresaMedicoSn is not null %}
                                {% if app.session.get('privilegiosRol').viewEmpresaMedicoSn %}
                                    <a href="{{ path('medico_empresa_view', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Ver" data-container="body"><i class="icon-eye"></i></a>
                                {% endif %}
                            {% endif %}

                            {% if app.session.get('privilegiosRol').editEmpresaMedicoSn is defined and app.session.get('privilegiosRol').editEmpresaMedicoSn is not null %}
                                {% if app.session.get('privilegiosRol').editEmpresaMedicoSn %}
                                    <a href="{{ path('medico_empresa_update', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>
                                {% endif %}
                            {% endif %}

                            <a href="{{ path('empresa_deselect', { 'tipo': 3 }) }}" data-popup="tooltip" title="Deseleccionar" data-container="body"><i class="icon-cancel-circle2"></i></a>

                        {% else %}

                            {% if app.session.get('privilegiosRol').viewEmpresaSn is defined and app.session.get('privilegiosRol').viewEmpresaSn is not null %}
                                {% if app.session.get('privilegiosRol').viewEmpresaSn %}
                                    <a href="{{ path('empresa_view', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Ver" data-container="body"><i class="icon-eye"></i></a>
                                {% endif %}
                            {% endif %}

                            {% if app.session.get('privilegiosRol').editEmpresaSn is defined and app.session.get('privilegiosRol').editEmpresaSn is not null %}
                                {% if app.session.get('privilegiosRol').editEmpresaSn %}
                                    <a href="{{ path('empresa_update', { 'id': app.session.get('empresa').id }) }}" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>
                                {% endif %}
                            {% endif %}

                            <a href="{{ path('empresa_deselect', { 'tipo': 1 }) }}" data-popup="tooltip" title="Deseleccionar" data-container="body"><i class="icon-cancel-circle2"></i></a>

                        {% endif %}
                    {% endif %}

                </h4>
            {% endif %}

            <ul class="navbar-nav ml-auto">

                {% if app.session.get('rol') is defined and app.session.get('rol') is not null %}
                    {% if app.session.get('rol') == 1 or app.session.get('rol') == 5 or app.session.get('rol') == 11 %}
                        <li class="nav-item">
                            <a href="{{ path('dashboard_admin') }}" class="navbar-nav-link caret-0">
                                <i class="icon-meter-fast"></i>
                                <span class="d-md-none ml-2">Messages</span>
                                <span class="badge badge-pill bg-warning-400 ml-auto ml-md-0" id="contadorDashboardAdmin">{{ app.session.get('revisionesPendientesFacturar') }}</span>
                            </a>
                        </li>
                    {% endif %}
                {% endif %}

                <!--Petició 28/07/2023-->


                <li class="nav-item">
                    <a href="{{ path('dashboard_admin2') }}" class="navbar-nav-link caret-0">
                        <i class="icon-envelop3"></i>
                        <span class="d-md-none ml-2">Messages</span>

                        <span class="badge badge-pill bg-warning-400 ml-auto ml-md-0" id="contadorDashboardAdmin2">{{ app.session.get('mensajesNoLeidos') }}</span>
                    </a>
                </li>

                <li class="nav-item dropdown language-switch">
                    {% if app.session.get('_locale') == 'es' %}
                        <a class="navbar-nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <img src="{{ asset('images/lang/es.png') }}" class="img-flag mr-2" alt="">
                            {% trans %}TRANS_MENU_SELECT_IDIOMA_ES{% endtrans %}
                        </a>
                    {% else %}
                        <a class="navbar-nav-link dropdown-toggle catalan" data-toggle="dropdown" aria-expanded="false">
                            <img src="{{ asset('images/lang/cat.png') }}" class="img-flag" alt="">
                            {% trans %}TRANS_MENU_SELECT_IDIOMA_CA{% endtrans %}
                        </a>
                    {% endif %}
                    <div class="dropdown-menu">
                        {% if app.session.get('_locale') == 'es' %}
                            <a href="#" onclick="cambioIdioma('ca')" class="dropdown-item catalan">
                                <img src="{{ asset('images/lang/cat.png') }}" class="img-flag" alt="">
                                {% trans %}TRANS_MENU_SELECT_IDIOMA_CA{% endtrans %}
                            </a>
                        {% else %}
                            <a href="#" onclick="cambioIdioma('es')" class="dropdown-item spanish">
                                <img src="{{ asset('images/lang/es.png') }}" class="img-flag" alt="">
                                {% trans %}TRANS_MENU_SELECT_IDIOMA_ES{% endtrans %}
                            </a>
                        {% endif %}
                    </div>
                </li>

                <li class="nav-item dropdown dropdown-user">
                    <a href="#" class="navbar-nav-link d-flex align-items-center dropdown-toggle" data-toggle="dropdown">
                        <img src="{{ asset('images/image.png') }}" class="rounded-circle mr-2" height="34" alt="">
                        <span>{{ app.user.username | capitalize }}</span>
                    </a>

                    <div class="dropdown-menu dropdown-menu-right">
                        {#                        <a href="#" class="dropdown-item" data-toggle="modal" data-target="#modal_idioma"><i class="icon-earth"></i> {% trans %}TRANS_MENU_CAMBIAR_IDIOMA{% endtrans %}</a>#}

                        {% if app.session.get('privilegiosRol').monitorAuditoriaSn is defined and app.session.get('privilegiosRol').monitorAuditoriaSn is not null %}
                            {% if app.session.get('privilegiosRol').monitorAuditoriaSn %}
                                <a href="{{ path('monitor_auditoria_index') }}" class="dropdown-item" target="_blank"><i class="icon-list3"></i> {% trans %}TRANS_MENU_MONITORAUDITORIA{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        {% if app.session.get('privilegiosRol').gdocSn is defined and app.session.get('privilegiosRol').gdocSn is not null %}
                            {% if app.session.get('privilegiosRol').gdocSn %}
                                <a href="{{ path('gdoc_index') }}" class="dropdown-item" target="_blank"><i class="icon-file-text2"></i>{% trans %}TRANS_MENU_ADM_PLANTILLAS{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        {% if app.session.get('privilegiosRol').firmaTecnicoSn is defined and app.session.get('privilegiosRol').firmaTecnicoSn is not null %}
                            {% if app.session.get('privilegiosRol').firmaTecnicoSn %}
                                <a href="{{ path('tecnico_firma_tecnicos_show') }}" class="dropdown-item" target="_blank"><i class="icon-pencil"></i>{% trans %}TRANS_FIRMAS_TECNICOS{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        {% if app.session.get('privilegiosRol').firmaMedicoSn is defined and app.session.get('privilegiosRol').firmaMedicoSn is not null %}
                            {% if app.session.get('privilegiosRol').firmaMedicoSn %}
                                <a href="{{ path('medico_firma_medicos_show') }}" class="dropdown-item" target="_blank"><i class="icon-pencil"></i>{% trans %}TRANS_FIRMAS_MEDICOS{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        {% if app.session.get('privilegiosRol').logEnvioMailSn is defined and app.session.get('privilegiosRol').logEnvioMailSn is not null %}
                            {% if app.session.get('privilegiosRol').logEnvioMailSn %}
                                <a href="{{ path('log_envio_mail') }}" class="dropdown-item" target="_blank"><i class="icon-envelop3"></i> {% trans %}TRANS_CORREOS_ENVIADOS{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        {% if app.session.get('privilegiosRol').enviarCorreoMasivoSn is defined and app.session.get('privilegiosRol').enviarCorreoMasivoSn is not null %}
                            {% if app.session.get('privilegiosRol').enviarCorreoMasivoSn %}
                                <a href="{{ path('envio_masivo_correo_show') }}" class="dropdown-item" target="_blank"><i class="icon-envelop3"></i> {% trans %}TRANS_ENVIAR_CORREO_MASIVO{% endtrans %}</a>
                            {% endif %}
                        {% endif %}
                        <!--Peticio 28/07/2023-->
                        {% if app.session.get('privilegiosRol').enviarCorreoMasivoSn is defined and app.session.get('privilegiosRol').enviarCorreoMasivoSn is not null %}

                            <a href="{{ path('envio_masivo_correo_show2') }}" class="dropdown-item" target="_blank"><i class="icon-envelop3"></i> {% trans %}TRANS_ENVIAR_CORREO_INTERNOS{% endtrans %}</a>

                        {% endif %}

                        {% if app.session.get('privilegiosRol').verHuecosFactura is defined and app.session.get('privilegiosRol').verHuecosFactura is not null %}
                            {% if app.session.get('privilegiosRol').verHuecosFactura %}
                                <a href="{{ path('factura_huecos_show') }}" class="dropdown-item" target="_blank"><i class="icon-file-eye"></i> {% trans %}TRANS_VER_HUECOS_LIBRES_FACTURAS{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        {% if app.session.get('privilegiosRol').avisoVencimientoAptitud is defined and app.session.get('privilegiosRol').avisoVencimientoAptitud is not null %}
                            {% if app.session.get('privilegiosRol').avisoVencimientoAptitud %}
                                <a href="{{ path('aviso_vencimiento_aptitud_show') }}" class="dropdown-item" target="_blank"><i class="icon-envelop2"></i> {% trans %}TRANS_AVISO_VENCIMIENTO_APTITUD{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        {% if app.session.get('privilegiosRol').administracionSn is defined and app.session.get('privilegiosRol').administracionSn is not null %}
                            {% if app.session.get('privilegiosRol').administracionSn %}
                                <a href="{{ path('sonata_admin_dashboard') }}" class="dropdown-item" target="_blank"><i class="icon-cog5"></i> {% trans %}TRANS_MENU_CONFIGURACION{% endtrans %}</a>
                            {% endif %}
                        {% endif %}

                        <div class="dropdown-divider"></div>
                        <a href="{{ path('ulogout') }}" class="dropdown-item"><i class="icon-switch2"></i> {% trans %}TRANS_MENU_LOGOUT{% endtrans %}</a>
                    </div>
                </li>
            </ul>
        </div>

    </div>
    <!-- /navbar content -->

    </div>
    <!-- /main navbar -->
{% endblock %}


<!-- Page content -->
<div class="page-content">
    {% block sidebar %}

        <!-- Main sidebar -->
        <div class="sidebar sidebar-dark sidebar-main sidebar-expand-md">

            <!-- Sidebar mobile toggler -->
            <div class="sidebar-mobile-toggler text-center">
                <a href="#" class="sidebar-mobile-main-toggle">
                    <i class="icon-arrow-left8"></i>
                </a>
                Navigation
                <a href="#" class="sidebar-mobile-expand">
                    <i class="icon-screen-full"></i>
                    <i class="icon-screen-normal"></i>
                </a>
            </div>
            <!-- /sidebar mobile toggler -->

            <!--MENU-->
            {% include 'theme/menu.html.twig' %}

            {#            <div class="sidebar-content">#}

            {#                <!-- Main navigation -->#}
            {#                <div class="card card-sidebar-mobile">#}
            {#                    <ul class="nav nav-sidebar" data-nav-type="accordion">#}

            {#                        {{ knp_menu_render('main') }}#}

            {#                    </ul>#}
            {#                </div>#}
            {#                <!-- /main navigation -->#}
            {#            </div>#}


        </div>
        <!-- /main sidebar -->
        <!-- Main content -->
    {% endblock %}


    <div class="content-wrapper">

        {% block contentheader %}
            <!-- Page header -->
            <div class="page-header">
                <div class="page-header-content header-elements-md-inline">
                    <div class="page-title d-flex">
                        <h4>{% block arrow %}{% endblock %} <span class="font-weight-semibold">{% block title %}{% endblock %}</span> - {% block subtitle %}{% endblock %}</h4>
                        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
                    </div>

                    <div class="header-elements d-none text-center text-md-left mb-3 mb-md-0">
                        {% block actions %}{% endblock %}
                    </div>
                </div>
            </div>
            <!-- /page header -->
        {% endblock %}

        {% block contentpage %}
            <!-- Content area -->
            <div class="content pt-0">

                {% block card %}
                {% endblock %}

            </div>
            <!-- /content area -->
        {% endblock %}

        {% block footer %}
            <!-- Footer -->
            <div class="navbar navbar-expand-lg navbar-light">
                <div class="text-center d-lg-none w-100">
                    <button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-footer">
                        <i class="icon-unfold mr-2"></i>
                        Footer
                    </button>
                </div>

                <div class="navbar-collapse collapse" id="navbar-footer">
                <span class="navbar-text">

                </span>
                </div>
            </div>
            <!-- /footer -->
        {% endblock %}
    </div>

    <!-- Modal cambio idioma -->
    <div id="modal_idioma" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans %}TRANS_MENU_CAMBIAR_IDIOMA{% endtrans %}</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <label>{% trans %}TRANS_MENU_SELECT_IDIOMA{% endtrans %}</label>
                    <select class="form-control select-icons" id="selectIdioma" data-fouc>
                        <option value="es">{% trans %}TRANS_MENU_SELECT_IDIOMA_ES{% endtrans %}</option>
                        {#                        <option value="ca">{% trans %}TRANS_MENU_SELECT_IDIOMA_CA{% endtrans %}</option>#}
                    </select>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn bg-primary" id="btnCambioIdioma">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal cambio idioma -->

</div>
<!-- /page content -->

</body>
</html>
