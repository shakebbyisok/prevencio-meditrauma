{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'mantenimientoreconocimientos' %}

{% block arrow %}
    {% if (app.session.get('pregunta') is defined and app.session.get('pregunta') is not empty ) %}
        <a href="{{ path('mantenimiento_reconocimientos_pregunta_update', { "id": app.session.get('pregunta') }) }}" style="color: black;" onclick="return confirm('{% trans from 'messages' %}TRANS_CONFIRM_RETURN{% endtrans %}')"><i class="icon-arrow-left52 mr-2"></i></a>
    {% else %}
        <a href="{{ path('mantenimiento_reconocimientos') }}" style="color: black;" onclick="return confirm('{% trans from 'messages' %}TRANS_CONFIRM_RETURN{% endtrans %}')"><i class="icon-arrow-left52 mr-2"></i></a>
    {% endif %}
{% endblock %}
{% block title %} {% trans %}TRANS_SUB_PREGUNTA{% endtrans %} {% endblock %}
{% block subtitle %}
    {% if (app.request.get('id') is defined and app.request.get('id') is not empty ) %}
        {{ form.vars.value.descripcion }}
    {% else %}
        {% trans from 'messages' %}TRANS_NUEVA{% endtrans %}
    {% endif %}
{% endblock %}

{% block card %}

    <script type="text/javascript">
        $(document).ready(function(){

        });

    </script>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}

            <div class="row">
                <div class="col-lg-1">
                    {{ form_row(form.orden) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.tipo) }}
                    <span class="font-size-base text-muted d-block">{% trans %}TRANS_INFO_IPO_DATO{% endtrans %}</span>
                </div>
                <div class="col-lg-2">
                    {{ form_row(form.descripcion) }}
                </div>
                <div class="col-lg-2">
                    {{ form_row(form.descripcionCa) }}
                </div>
            </div>

        </div>

        <div class="card-footer d-flex justify-content-between align-items-center border-top-0">
            {% if app.session.get('privilegiosRol').mantenimientoSubPreguntasSn is defined and app.session.get('privilegiosRol').mantenimientoSubPreguntasSn is not null %}
                {% if app.session.get('privilegiosRol').mantenimientoSubPreguntasSn %}
                    {{ form_row(form.guardar) }}
                {% else %}
                    {{ form_row(form.guardar, {'attr': {'style': 'display: none;'}}) }}
                {% endif %}
            {% else %}
                {{ form_row(form.guardar, {'attr': {'style': 'display: none;'}}) }}
            {% endif %}
        </div>

        {{ form_end(form) }}
    </div>

    <!-- Modal añadir pregunta a la subpregunta -->
    <div id="modal_añadir_subpreguntapregunta" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans %}TRANS_AÑADIR_PREGUNTA{% endtrans %}</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <label>{% trans %}TRANS_TEXTO_PREGUNTA{% endtrans %}</label>
                    <input type="text" id="pregunta" class="form-control" style="margin-top: 10px;" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn bg-primary" id="btnAddSubPreguntaPregunta">{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal añadir pregunta a la subpregunta -->

    <!-- Modal modificar pregunta a la subpregunta -->
    <div id="modal_editar_subpreguntapregunta" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans %}TRANS_EDITAR_PREGUNTA{% endtrans %}</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <label>{% trans %}TRANS_TEXTO_PREGUNTA{% endtrans %}</label>
                    <input type="text" id="preguntaEdit" class="form-control" style="margin-top: 10px;" />
                    <input type="hidden" id="preguntaEditId" class="form-control" style="margin-top: 10px;" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn bg-primary" id="btnUpdateSubPreguntaPregunta">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal modificar pregunta a la subpregunta -->


{% endblock %}



