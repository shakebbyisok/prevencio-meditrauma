{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'mantenimientoreconocimientos' %}

{% block arrow %}<a href="{{ path('mantenimiento_reconocimientos') }}" style="color: black;" onclick="return confirm('{% trans from 'messages' %}TRANS_CONFIRM_RETURN{% endtrans %}')"><i class="icon-arrow-left52 mr-2"></i></a>{% endblock %}
{% block title %} {% trans %}TRANS_FORMULA{% endtrans %} {% endblock %}
{% block subtitle %}
    {% if (app.request.get('id') is defined and app.request.get('id') is not empty ) %}
        {{ form.vars.value.codigo }}
    {% else %}
        {% trans from 'messages' %}TRANS_NUEVA{% endtrans %}
    {% endif %}
{% endblock %}

{% block card %}

    <script type="text/javascript">
        $(document).ready(function(){

            //Boton que añade la variable a la formula
            $('#btnAddVariable').click(function(){

                if($('#variable').val() == ""){
                    $('#variable').focus();
                    return false;
                }

                $('#btnAddVariable').prop("disabled", true);
                $('#btnAddVariable').html("<i class=\"icon-spinner2 spinner mr-2\"></i>{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");

                $.ajax({
                    type: "POST",
                    url: "{{ path('mantenimiento_reconocimientos_variable_add') }}",
                    data: {
                        'formulaId': '{{ app.request.get('id') }}',
                        'variable': $('#variable').val(),
                        'codigo': $('#variableCodigo').val()
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnAddVariable').prop("disabled", false);
                        $('#btnAddVariable').html("{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");
                    }
                });
            });

            //Boton que modifica la variable a la formula
            $('#btnUpdateVariable').click(function(){

                if($('#variableEdit').val() == ""){
                    $('#variableEdit').focus();
                    return false;
                }

                $('#btnUpdateVariable').prop("disabled", true);
                $('#btnUpdateVariable').html("<i class=\"icon-spinner2 spinner mr-2\"></i>Guardar");

                $.ajax({
                    type: "POST",
                    url: "{{ path('mantenimiento_reconocimientos_variable_update') }}",
                    data: {
                        'variableId': $('#variableEditId').val(),
                        'variable': $('#variableEdit').val(),
                        'codigo': $('#variableCodigoEdit').val()
                    },
                    dataType: "JSON",
                    success: function (data) {
                        if(data == "OK"){
                            location.reload();
                        }
                    },
                    error: function(){
                        new PNotify({
                            title: 'Ops!',
                            text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                            icon: 'icon-blocked',
                            type: 'error'
                        });

                        $('#btnUpdateVariable').prop("disabled", false);
                        $('#btnUpdateVariable').html("{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}");
                    }
                });
            });
        });

        function recuperaVariable(id) {
            $.ajax({
                type: "POST",
                url: "{{ path('mantenimiento_reconocimientos_variable_recupera') }}",
                data: {
                    'variableId': id
                },
                dataType: "JSON",
                success: function (data) {
                    if (data != null) {
                        $('#variableEditId').val(data.id);
                        $('#variableEdit').val(data.descripcion);
                        $('#variableCodigoEdit').val(data.codigo)
                    }
                },
                error: function () {
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

        function deleteVariable(id) {
            $.ajax({
                type: "POST",
                url: "{{ path('mantenimiento_reconocimientos_variable_delete') }}",
                data: {
                    'variableId': id
                },
                dataType: "JSON",
                success: function (data) {
                    if (data == "OK") {
                        location.reload();
                    }
                },
                error: function () {
                    new PNotify({
                        title: 'Ops!',
                        text: '{% trans from "messages" %}TRANS_AVISO_ERROR{% endtrans %}',
                        icon: 'icon-blocked',
                        type: 'error'
                    });
                }
            });
        }

        //Boton que elimina la variable seleccionada
        $(document).on('click', 'a.eliminarVariable', function(){
            var id = $(this).data('id');
            bootbox.confirm({
                title: '{% trans from 'messages' %}TRANS_ELIMINAR_VARIABLE{% endtrans %}',
                message: '{% trans from 'messages' %}TRANS_CONFIRM_DELETE_REGISTRO{% endtrans %}',
                buttons: {
                    confirm: {
                        label: 'Si',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-link'
                    }
                },
                callback: function (result) {
                    if(result == true){
                        deleteVariable(id)
                    }
                }
            });
        });

    </script>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}

            <div class="row">
                <div class="col-lg-1">
                    {{ form_row(form.codigo) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.descripcion) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h4 style="font-weight: bolder;">{% trans %}TRANS_VARIABLES{% endtrans %}</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    {% if app.session.get('privilegiosRol').mantenimientoFormulasSn is defined and app.session.get('privilegiosRol').mantenimientoFormulasSn is not null %}
                        {% if app.session.get('privilegiosRol').mantenimientoFormulasSn %}
                            {% if (app.request.get('id') is defined and app.request.get('id') is not empty ) %}
                                <a href="#" class="btn btn-labeled btn-labeled-left bg-grey-300" data-toggle="modal" data-target="#modal_añadir_variable">{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}<b><i class="icon-plus3"></i></b></a>
                                <br/>
                                <br/>
                            {% endif %}
                        {% endif %}
                    {% endif %}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="table-bordered">
                        <table class="table" id="variables">
                            <thead>
                            <tr class="bg-grey-300">
                                <th>{% trans %}TRANS_CODIGO_FORMULA{% endtrans %}</th>
                                <th>{% trans %}TRANS_VARIABLE{% endtrans %}</th>
                                <th>{% trans from 'messages' %}TRANS_ACCIONES{% endtrans %}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if variables is defined and variables is not empty %}
                                {% for v in variables %}
                                    <tr>
                                        <td>{{ v.codigo }}</td>
                                        <td>{{ v.descripcion }}</td>
                                        <td>
                                            <div class="list-icons">
                                                {% if app.session.get('privilegiosRol').mantenimientoFormulasSn is defined and app.session.get('privilegiosRol').mantenimientoFormulasSn is not null %}
                                                    {% if app.session.get('privilegiosRol').mantenimientoFormulasSn %}
                                                        <a href="#" onclick="recuperaVariable('{{ v.id }}');" data-id="{{ v.id }}" class="list-icons-item" data-toggle="modal" data-target="#modal_editar_variable"><i class="icon-pencil7"></i></a>
                                                    {% endif %}
                                                {% endif %}

                                                {% if app.session.get('privilegiosRol').mantenimientoFormulasSn is defined and app.session.get('privilegiosRol').mantenimientoFormulasSn is not null %}
                                                    {% if app.session.get('privilegiosRol').mantenimientoFormulasSn %}
                                                        <a href="#" data-id="{{ v.id }}" target="_self" class="list-icons-item eliminarVariable"><i class="icon-trash"></i></a>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="3" align="center">{% trans from 'messages' %}TRANS_SIN_REGISTROS{% endtrans %}</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

        <div class="card-footer d-flex justify-content-between align-items-center border-top-0">
            {% if app.session.get('privilegiosRol').mantenimientoFormulasSn is defined and app.session.get('privilegiosRol').mantenimientoFormulasSn is not null %}
                {% if app.session.get('privilegiosRol').mantenimientoFormulasSn %}
                    {{ form_row(form.guardar) }}
                {% else %}
                    {{ form_row(form.guardar, {'attr': {'style': 'display: none;'}}) }}
                {% endif %}
            {% else %}
                {{ form_row(form.guardar, {'attr': {'style': 'display: none;'}}) }}
            {% endif %}
        </div>

        {{ form_end(form) }}
    </div>

    <!-- Modal añadir variable a la formula -->
    <div id="modal_añadir_variable" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans %}TRANS_AÑADIR_VARIABLE{% endtrans %}</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <label>{% trans %}TRANS_CODIGO_FORMULA{% endtrans %}</label>
                    <input type="text" id="variableCodigo" class="form-control" style="margin-top: 10px;" />
                    <label>{% trans %}TRANS_VARIABLE{% endtrans %}</label>
                    <input type="text" id="variable" class="form-control" style="margin-top: 10px;" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn bg-primary" id="btnAddVariable">{% trans from 'messages' %}TRANS_AÑADIR{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal añadir variable a la formula -->

    <!-- Modal modificar variable a la formula -->
    <div id="modal_editar_variable" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans %}TRANS_EDITAR_VARIABLE{% endtrans %}</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <label>{% trans %}TRANS_CODIGO_FORMULA{% endtrans %}</label>
                    <input type="text" id="variableCodigoEdit" class="form-control" style="margin-top: 10px;" />
                    <label>{% trans %}TRANS_VARIABLE{% endtrans %}</label>
                    <input type="text" id="variableEdit" class="form-control" style="margin-top: 10px;" />
                    <input type="hidden" id="variableEditId" class="form-control" style="margin-top: 10px;" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn bg-primary" id="btnUpdateVariable">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal modificar variable a la formula -->


{% endblock %}



