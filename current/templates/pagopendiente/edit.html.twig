{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'pagopendiente' %}

{% block arrow %}<a href="{{ path('pago_pendiente_show') }}" style="color: black;" onclick="return confirm('{% trans from 'messages' %}TRANS_CONFIRM_RETURN{% endtrans %}')"><i class="icon-arrow-left52 mr-2"></i></a>{% endblock %}
{% block title %} {% trans %}TRANS_PAGO{% endtrans %} {% endblock %}
{% block subtitle %}
    {% if (app.request.get('id') is defined and app.request.get('id') is not empty ) %}
        {% if form.vars.value.contrato is not null %}
            {{ form.vars.value.contrato.contrato }}
        {% endif %}
    {% else %}
        {% trans from 'messages' %}TRANS_NUEVO{% endtrans %}
    {% endif %}
{% endblock %}

{% block card %}
    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}

            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.contrato) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(form.porcentaje) }}
                    {{ form_row(form.importeSinIva, {'attr': {'class': 'type_text_to_number'}}) }}
                    {{ form_row(form.importeSujetoIva, {'attr': {'class': 'type_text_to_number'}}) }}
                    {{ form_row(form.importeTotal, {'attr': {'class': 'type_text_to_number'}}) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.vencimientoMeses) }}
                    {{ form_row(form.importeExentoIva, {'attr': {'class': 'type_text_to_number'}}) }}
                    {{ form_row(form.importeIva, {'attr': {'class': 'type_text_to_number'}}) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.facturado) }}
                </div>
            </div>

        </div>

        <div class="card-footer d-flex justify-content-between align-items-center border-top-0">
            {{ form_row(form.guardar) }}
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}



