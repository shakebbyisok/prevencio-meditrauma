{% extends 'theme/template.html.twig' %}
{% trans_default_domain 'empresas' %}

{% block title %} {% trans %}TRANS_EMPRESAS{% endtrans %} {% endblock %}
{% block subtitle %} {% trans %}TRANS_LISTADO{% endtrans %} {% endblock %}

{% block actions %}
{#    {% if app.session.get('privilegiosRol').addEmpresaMedicoSn is defined and app.session.get('privilegiosRol').addEmpresaMedicoSn is not null %}#}
{#        {% if app.session.get('privilegiosRol').addEmpresaMedicoSn %}#}
{#            <a href="{{ path('medico_empre') }}" class="btn btn-labeled btn-labeled-left bg-primary">{% trans %}TRANS_NUEVA_EMPRESA{% endtrans %}<b><i class="icon-plus3"></i></b></a>#}
{#        {% endif %}#}
{#    {% endif %}#}
{% endblock %}

{% block card %}

    <script type="text/javascript">
        $(document).ready(function(){
            var arrayData = [];

            {% for empresa in empresas %}
                var array = [];
                var activa;
                var actions = '<div class="list-icons">';

                {% if app.session.get('privilegiosRol').viewEmpresaMedicoSn is defined and app.session.get('privilegiosRol').viewEmpresaMedicoSn is not null %}
                    {% if app.session.get('privilegiosRol').viewEmpresaMedicoSn %}
                        actions += '<a href="{{ path('medico_empresa_view', { "id": empresa.id }) }}" class="list-icons-item" data-popup="tooltip" title="Ver" data-container="body"><i class="icon-eye"></i></a>';
                    {% endif %}
                {% endif %}

                {% if app.session.get('privilegiosRol').editEmpresaMedicoSn is defined and app.session.get('privilegiosRol').editEmpresaMedicoSn is not null %}
                    {% if app.session.get('privilegiosRol').editEmpresaMedicoSn %}
                        actions += '<a href="{{ path('medico_empresa_update', { "id": empresa.id }) }}" class="list-icons-item" data-popup="tooltip" title="Editar" data-container="body"><i class="icon-pencil7"></i></a>';
                    {% endif %}
                {% endif %}

                var activa = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                {% if empresa.anulado == false %}
                    activa = '<span class="badge badge-flat border-success text-success-600"><i class="icon-checkmark2"></i></span>';
                {% endif %}

                var pruebasEspeciales = '<span class="badge badge-flat border-danger text-danger-600"><i class="icon-cross3"></i></span>';
                {% if empresa.pruebas_especiales == true %}
                    pruebasEspeciales = '<span class="badge badge-flat border-success text-success-600"><i class="icon-checkmark2"></i></span>';
                {% endif %}

                actions += '</div>';

                array.push(actions, activa, pruebasEspeciales, '{{ empresa.empresa }}', '{{ empresa.domicilio_fiscal }}', '{{ empresa.codigo_postal_fiscal }}', '{{ empresa.localidad_fiscal }}');
                arrayData.push(array);
            {% endfor %}

            $.extend( $.fn.dataTable.defaults, {
                // autoWidth: true,
                // columnDefs: [{
                //     width: 100,
                // }],
                // ordering: true,
                deferRender: true,
                dom: '<"datatable-header"fBl><"datatable-scroll-wrap"t><"datatable-footer"ip>',
                lengthMenu: [[10, 25, 50, 100, 500, 2000, 5000], [10, 25, 50, 100, 500, 2000, 5000]],
                language: {
                    search: '<span>Filtrar:</span> _INPUT_',
                    searchPlaceholder: 'Escriba para filtrar...',
                    lengthMenu: '<span>Mostrar:</span> _MENU_',
                    paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                },
                data: arrayData
            });

            $('.datatable-export-excel').DataTable({
                buttons: {
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            className: 'btn btn-success',
                            text: '<i class="icon-file-spreadsheet mr-2"></i> Exportar a Excel',
                            fieldSeparator: '\t',
                            extension: '.xlsx'
                        }
                    ]
                }
            });

            {% if app.session.get('privilegiosRol').exportEmpresaMedicoSn is defined and app.session.get('privilegiosRol').exportEmpresaMedicoSn is not null %}
                {% if app.session.get('privilegiosRol').exportEmpresaMedicoSn != true %}
                    $('.dt-buttons').css('display', 'none');
                {% endif %}
            {% endif %}

        });
    </script>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success bg-white alert-styled-left alert-arrow-left alert-dismissible">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">

            <div class="datatable-scroll">
                <table class="table datatable-export-excel dataTable no-footer" id="DataTables_Table_0" role="grid"
                       aria-describedby="DataTables_Table_0_info">
                    <thead>
                    <tr role="row">
                        <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-label="Actions"
                            style="width: 100px;">{% trans from 'messages' %}TRANS_ACCIONES{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-sort="ascending" aria-label="Activa">{% trans %}TRANS_ACTIVA{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="PruebasEspeciales">{% trans %}TRANS_PRUEBAS_ESPECIALES{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Empresa">{% trans %}TRANS_NOMBRE{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Domicilio">{% trans %}TRANS_DOMICILIO{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="CodigoPostal">{% trans %}TRANS_CODIGO_POSTAL{% endtrans %}
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Localidad">{% trans %}TRANS_LOCALIDAD{% endtrans %}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}